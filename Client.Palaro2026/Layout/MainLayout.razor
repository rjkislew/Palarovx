@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider Theme="PalaroTheme" DefaultScrollbar="true" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Dense Class="py-1">
        <MudImage Height="50" Src="./media/logo/Flat Logo with 2026.png" />
        <MudStack Spacing="1" AlignItems="AlignItems.Start" Justify="Justify.Center" Style="height: 100%" Class="pt-4 mr-10">
            <MudText Typo="Typo.h3" Color="Color.Primary">Palaro 2026</MudText>
            <MudText Typo="Typo.caption" Color="Color.Primary">Agusan del Sur</MudText>
        </MudStack>
        <TopNavigation />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    private MudTheme PalaroTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new DefaultTypography()
                {
                    FontFamily = new[] { "Poppins" },
                },
                H1 = new H1Typography()
                {
                    FontFamily = new[] { "Bebas Neue" },
                    FontSize = "110px",
                    LetterSpacing = "1px",
                    LineHeight = "1"
                },
                H2 = new H2Typography()
                {
                    FontFamily = new[] { "Bebas Neue" },
                    LetterSpacing = "2px"
                },
                H3 = new H3Typography()
                {
                    FontFamily = new[] { "Bebas Neue" },
                    FontSize = "25px",
                    LineHeight = "0px",
                    LetterSpacing = "2px"
                }
            },
            PaletteLight = new PaletteLight()
            {
                Primary = Colors.Gray.Darken4,
                Secondary = Colors.Gray.Darken3,
                Tertiary = Colors.Shades.White,
                AppbarBackground = Colors.Shades.White,
                AppbarText = Colors.Shades.Black
            },
        };
}