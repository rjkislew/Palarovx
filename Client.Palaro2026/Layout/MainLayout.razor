@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="PGASTheme" DefaultScrollbar="true" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="0">
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndDown">
            <NavigationMenu />
        </MudHidden>
    </MudAppBar>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudDrawer Variant="@DrawerVariant.Responsive" @bind-Open="@_open" Elevation="1">
            <NavigationMenu />
        </MudDrawer>
    </MudHidden>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
        StateHasChanged();
    }
    private MudTheme PGASTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Poppins", "Helvetica", "Arial", "sans-serif" }
                },
                H1 = new H1()
                {
                    FontFamily = new[] { "New Amsterdam" },
                    LetterSpacing = "2px"
                },
                H2 = new H2()
                {
                    FontFamily = new[] { "New Amsterdam" },
                    LetterSpacing = "2px"
                }
            },
            PaletteLight = new PaletteLight()
            {
                Primary = "#141414",
                Secondary = Colors.Shades.White,
                Tertiary = Colors.Gray.Darken3,
                Background = "#EFEFEF",
                AppbarBackground = Colors.Shades.White,
                DrawerBackground = "#141414",
                TextSecondary = Colors.Gray.Lighten1,
                AppbarText = Colors.Gray.Darken3,
                DrawerText = Colors.Gray.Darken3,
                DrawerIcon = Colors.Gray.Darken3,
                Surface = Colors.Shades.White,
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Yellow.Darken3,
                Secondary = Colors.Blue.Default,
                Tertiary = Colors.Gray.Lighten3,
                Background = "#121212",
                AppbarText = Colors.Gray.Lighten3,
                AppbarBackground = "#212121",
                DrawerBackground = "#121212",
                DrawerText = Colors.Gray.Lighten3,
                DrawerIcon = Colors.Gray.Lighten3,
                Surface = "#212121",

            },
            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "220px",
            }
        };
}
