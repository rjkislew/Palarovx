                                            <MudImage ObjectFit="ObjectFit.Contain" Style="height: 100%; width: 100%" Src="media/images/DO-Plaza-Memorial-Sports-Complex.jpg" />
                                            <MudStack Class="pa-3">
                                                <MudText Typo="Typo.body1">
                                                    <b>
