@page "/"
@inject IJSRuntime JSRuntime

<MudPaper></MudPaper>

<MudGrid Spacing="20">
    <MudItem xs="12">
        <MudGrid>
            <MudItem xs="12">
                <MudStack Style="
                            position: relative;
                            overflow: hidden;
                            height: calc(100vh - 64px);
                            background-attachment: fixed;
                            background-position: center;
                            background-repeat: no-repeat;
                            background-size: cover;
                            background-image: url('Media/Images/Grand_Stand.jpg');">
                    <MudStack Style="
                                position: absolute;
                                top: 0;
                                left: 0;
                                width: 100%;
                                height: 100%;
                                background-color: rgba(0, 0, 0, 0.75);
                                z-index: 1;">
                    </MudStack>
                    <MudStack Style="height: 100%" Wrap="Wrap.Wrap" Class="pa-5" AlignItems="AlignItems.Center" Justify="Justify.Center">
                        <MudText Align="Align.Center" Typo="Typo.h1" Color="Color.Secondary" Style="z-index: 2"><b>PALARO 2026</b></MudText>
                    </MudStack>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem xs="12">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Spacing="20">
                <MudItem xs="12">
                    <SportsCardComponent/>
                </MudItem>
                <MudItem xs="12">
                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudPaper Height="250px" Class="pa-0 relative" Elevation="0">
                                <MudImage Src="Media/Images/Agusan_Marsh.jpg"
                                          ObjectFit="ObjectFit.Cover"
                                          ObjectPosition="ObjectPosition.Center"
                                          Style="height: 100%; width: 100%"
                                          Class="rounded" />
                                <MudStack Class="rounded"
                                          Style="backdrop-filter: blur(3px);
                                         position: absolute;
                                         top: 0;
                                         left: 0;
                                         width: 100%;
                                         height: 100%;
                                         background-color: rgba(0, 0, 0, 0.5);
                                         z-index: 1;">
                                </MudStack>
                                <MudText Typo="Typo.h2" Color="Color.Secondary" Class="absolute pa-5" Style="left: 0; bottom: 0;z-index: 2">
                                    Tourism
                                </MudText>
                            </MudPaper>
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudPaper Height="250px" Class="pa-0 relative" Elevation="0">
                                <MudImage Src="Media/Images/Accomodation.png"
                                          ObjectFit="ObjectFit.Cover"
                                          ObjectPosition="ObjectPosition.Center"
                                          Style="height: 100%; width: 100%"
                                          Class="rounded" />
                                <MudStack Class="rounded"
                                          Style="backdrop-filter: blur(3px);
                                         position: absolute;
                                         top: 0;
                                         left: 0;
                                         width: 100%;
                                         height: 100%;
                                         background-color: rgba(0, 0, 0, 0.5);
                                         z-index: 1;">
                                </MudStack>
                                <MudText Typo="Typo.h2" Color="Color.Secondary" Class="absolute pa-5" Style="left: 0; bottom: 0;z-index: 2">
                                    Accommodation
                                </MudText>
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </MudItem>
                <MudItem xs="12">
                    <SponsorsComponent/>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudItem>
</MudGrid>

<MudStack Class="pt-20">
    <UnderConstruction />
    <FooterComponent />
</MudStack>
@code {
}

