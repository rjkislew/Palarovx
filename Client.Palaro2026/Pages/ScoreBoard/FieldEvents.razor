@page "/scoreboard/field-events"
@using Client.Palaro2026.Services
@using System.Linq
@layout NoMainLayout
@inject APIService apiService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Field Events Scoreboard | Palaro tu AgSur 2026</PageTitle>

<style>
    /* --- IMPORTS --- */
    @@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;900&family=Rajdhani:wght@500;600;700&display=swap');

    :root {
        --bg-dark: #0a0a0a;
        --card-bg: rgba(30, 30, 30, 0.7);
        --card-border: rgba(255, 255, 255, 0.1);
        --accent-gold: #FFD700;
        --accent-blue: #00e5ff;
        --text-white: #ffffff;
    }

    body {
        background-color: var(--bg-dark);
        background-image: radial-gradient(circle at 15% 50%, rgba(0, 229, 255, 0.05) 0%, transparent 25%), radial-gradient(circle at 85% 30%, rgba(255, 215, 0, 0.05) 0%, transparent 25%);
        font-family: 'Rajdhani', sans-serif;
        color: white;
        min-height: 100vh;
    }

    .scoreboard-header {
        text-align: center;
        padding: 40px 0 20px;
    }

    .main-title {
        font-family: 'Orbitron', sans-serif;
        font-weight: 900;
        font-size: 3rem;
        background: linear-gradient(180deg, #FFFFFF 0%, #b0b0b0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: 4px;
    }

    /* MODERN CARD */
    .modern-card {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        height: 500px; /* Fixed height para uniform */
        overflow: hidden;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .modern-card:hover {
            border-color: var(--accent-gold);
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

    .card-header {
        padding: 15px 20px;
        background: rgba(0,0,0,0.2);
        border-bottom: 1px solid rgba(255,255,255,0.05);
        flex-shrink: 0;
    }

    .event-name {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--accent-gold);
    }

    .event-details {
        font-size: 0.9rem;
        color: #aaa;
    }

    /* SCROLLABLE PLAYER LIST */
    .player-list-container {
        flex-grow: 1;
        overflow-y: auto;
        padding: 10px;
    }

        /* Custom Scrollbar */
        .player-list-container::-webkit-scrollbar {
            width: 6px;
        }

        .player-list-container::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.1);
        }

        .player-list-container::-webkit-scrollbar-thumb {
            background: var(--accent-gold);
            border-radius: 3px;
        }

    .player-row {
        display: flex;
        align-items: center;
        padding: 8px 10px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        font-size: 0.95rem;
    }

        .player-row:last-child {
            border-bottom: none;
        }

    .player-rank {
        width: 30px;
        font-family: 'Orbitron', sans-serif;
        font-weight: bold;
        color: #888;
    }

    .rank-1 {
        color: #FFD700;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
        font-size: 1.1rem;
    }

    .rank-2 {
        color: #C0C0C0;
    }

    .rank-3 {
        color: #CD7F32;
    }

    .player-info {
        flex-grow: 1;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        padding-right: 10px;
    }

    .player-name {
        font-weight: 700;
        display: block;
    }

    .player-region {
        font-size: 0.75rem;
        color: var(--accent-blue);
    }

    .player-score {
        font-family: 'Orbitron', sans-serif;
        font-weight: bold;
        text-align: right;
        min-width: 60px;
    }

    /* FOOTER BUTTON */
    .card-footer {
        padding: 15px;
        background: rgba(0,0,0,0.3);
        border-top: 1px solid rgba(255,255,255,0.05);
        flex-shrink: 0;
    }

    .tv-btn {
        display: block;
        width: 100%;
        padding: 10px;
        background: rgba(255, 255, 255, 0.05);
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 8px;
        font-family: 'Orbitron';
        font-size: 0.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.2s;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

        .tv-btn:hover {
            background: var(--accent-gold);
            color: black;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
        }

    .badge-live {
        background: linear-gradient(135deg, #FF0000 0%, #CC0000 100%);
        color: white;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 800;
        float: right;
        box-shadow: 0 0 15px rgba(255, 0, 0, 0.6);
        border: 1px solid #FF4444;
        animation: pulse 2s infinite;
    }

    .badge-finish {
        background: linear-gradient(135deg, #00C853 0%, #00695C 100%);
        color: white;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 800;
        float: right;
        border: 1px solid #69F0AE;
        box-shadow: 0 0 10px rgba(0, 230, 118, 0.4);
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
            box-shadow: 0 0 15px rgba(255, 0, 0, 0.6);
        }

        50% {
            opacity: 0.8;
            box-shadow: 0 0 5px rgba(255, 0, 0, 0.3);
        }

        100% {
            opacity: 1;
            box-shadow: 0 0 15px rgba(255, 0, 0, 0.6);
        }
    }
</style>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pb-16">

    <div class="scoreboard-header">
        <div class="main-title">FIELD EVENTS</div>
        <MudText Typo="Typo.h6" Style="color: #888;">OFFICIAL STANDINGS</MudText>
    </div>

    @if (_isLoading)
    {
        <MudStack AlignItems="AlignItems.Center" Class="mt-16">
            <MudProgressCircular Indeterminate="true" Color="Color.Warning" Size="Size.Large" />
            <MudText Class="mt-4">Loading Data...</MudText>
        </MudStack>
    }
    else
    {
        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" Centered="true" Color="Color.Dark" Class="mt-4">

            <!-- LIVE TAB -->
            <MudTabPanel Text="LIVE/ONGOING" Icon="@Icons.Material.Filled.Stream">
                <MudGrid Class="mt-4" Spacing="3">
                    @if (!_ongoingEvents.Any())
                    {
                        <MudItem xs="12">
                            <MudPaper Class="pa-16 d-flex flex-column align-center justify-center" Style="background-color: rgba(30,30,30,0.5); border: 1px dashed #444; border-radius: 20px;">
                                <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Large" Style="color: #555;" />
                                <MudText Typo="Typo.h6" Class="mt-4" Style="color: #777;">No ongoing field events</MudText>
                            </MudPaper>
                        </MudItem>
                    }
                    else
                    {
                        @foreach (var evt in _ongoingEvents)
                        {
                            <MudItem xs="12" sm="6" md="4" lg="3">
                                <div class="modern-card">
                                    <!-- HEADER -->
                                    <div class="card-header">
                                        @if (evt.IsFinished == true)
                                        {
                                            <span class="badge-finish">FINISH</span>
                                        }
                                        else
                                        {
                                            <span class="badge-live">LIVE</span>
                                        }
                                        <div class="event-name">@evt.Subcategory</div>
                                        <div class="event-details">@evt.Gender • @evt.Level</div>
                                        <div class="event-details" style="font-size: 0.8rem; color: var(--accent-blue)">@evt.EventStage</div>
                                    </div>

                                    <!-- LIST OF PLAYERS -->
                                    <div class="player-list-container">
                                        @if (_eventRankings.ContainsKey(evt.ID) && _eventRankings[evt.ID].Any())
                                        {
                                            @foreach (var player in _eventRankings[evt.ID])
                                            {
                                                <div class="player-row">
                                                    <div class="player-rank @GetRankClass(player.Rank)">
                                                        @(player.Rank > 0 ? $"#{player.Rank}" : "-")
                                                    </div>
                                                    <div class="player-info">
                                                        <span class="player-name">@player.PlayerName</span>
                                                        <span class="player-region">@player.RegionAbbreviation</span>
                                                    </div>
                                                    <div class="player-score">
                                                        @player.BestResult.ToString("0.00")
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="d-flex justify-center align-center h-100">
                                                <MudText Typo="Typo.caption" Style="color:#666">Waiting for participants...</MudText>
                                            </div>
                                        }
                                    </div>

                                    <!-- FOOTER LINK -->
                                    <div class="card-footer">
                                        <a href="/scoreboard/field-events/@evt.ID" target="_blank" class="tv-btn">
                                            OPEN TV VIEW <MudIcon Icon="@Icons.Material.Filled.OpenInNew" Size="Size.Small" Class="ml-2" />
                                        </a>
                                    </div>
                                </div>
                            </MudItem>
                        }
                    }
                </MudGrid>
            </MudTabPanel>

            <!-- FINISHED TAB -->
            <MudTabPanel Text="PARTIAL RESULT" Icon="@Icons.Material.Filled.EmojiEvents">
                <MudGrid Class="mt-4" Spacing="3">
                    @if (!_finishedEvents.Any())
                    {
                        <MudItem xs="12">
                            <MudPaper Class="pa-16 d-flex flex-column align-center justify-center" Style="background-color: rgba(30,30,30,0.5); border: 1px dashed #444; border-radius: 20px;">
                                <MudIcon Icon="@Icons.Material.Filled.HistoryToggleOff" Size="Size.Large" Style="color: #555;" />
                                <MudText Typo="Typo.h6" Class="mt-4" Style="color: #777;">No completed events yet</MudText>
                            </MudPaper>
                        </MudItem>
                    }
                    else
                    {
                        @foreach (var evt in _finishedEvents)
                        {
                            <MudItem xs="12" sm="6" md="4" lg="3">
                                <div class="modern-card">
                                    <div class="card-header">
                                        <span class="badge-finish">FINISH</span>
                                        <div class="event-name">@evt.Subcategory</div>
                                        <div class="event-details">@evt.Gender • @evt.Level</div>
                                        <div class="event-details" style="font-size: 0.8rem; color: var(--accent-blue)">@evt.EventStage</div>
                                    </div>

                                    <div class="player-list-container">
                                        @if (_eventRankings.ContainsKey(evt.ID))
                                        {
                                            @foreach (var player in _eventRankings[evt.ID])
                                            {
                                                <div class="player-row">
                                                    <div class="player-rank @GetRankClass(player.Rank)">
                                                        #@player.Rank
                                                    </div>
                                                    <div class="player-info">
                                                        <span class="player-name">@player.PlayerName</span>
                                                        <span class="player-region">@player.RegionAbbreviation</span>
                                                    </div>
                                                    <div class="player-score">
                                                        @player.BestResult.ToString("0.00")
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>

                                    <div class="card-footer">
                                        <a href="/scoreboard/field-events/@evt.ID" target="_blank" class="tv-btn">
                                            VIEW OFFICIAL RESULTS
                                        </a>
                                    </div>
                                </div>
                            </MudItem>
                        }
                    }
                </MudGrid>
            </MudTabPanel>

        </MudTabs>
    }

</MudContainer>

@code {
    /* ===================== MODELS ===================== */

    public class EventsDTO
    {
        public class EventDetails
        {
            public class Event
            {
                public string ID { get; set; } = null!;
                public string? EventStage { get; set; }
                public List<EventVersusTeams>? EventVersusList { get; set; }
                public string? SportMainCat { get; set; }
                public string? Category { get; set; }
                public string? Sport { get; set; }
                public string? GamePhase { get; set; }
                public int? SubCategoryID { get; set; }
                public string? Subcategory { get; set; }
                public string? Gender { get; set; }
                public string? Level { get; set; }
                public string? Venue { get; set; }
                public decimal? Latitude { get; set; }
                public decimal? Longitude { get; set; }
                public DateTime? Date { get; set; }
                public TimeSpan? Time { get; set; }
                public bool? OnStream { get; set; }
                public string? StreamService { get; set; }
                public string? StreamURL { get; set; }
                public bool? IsFinished { get; set; }
                public bool? Archived { get; set; }
                public bool? Deleted { get; set; }
                public string? FirstName { get; set; }
                public string? LastName { get; set; }
            }

            public class EventVersusTeams
            {
                public int ID { get; set; }
                public string? Score { get; set; }
                public string? Region { get; set; }
                public string? Abbreviation { get; set; }
                public List<EventVersusTeamPlayers>? EventVersusTeamPlayersList { get; set; }
                public string? Rank { get; set; }
                public DateTime? RecentUpdateAt { get; set; }
            }

            public class EventVersusTeamPlayers
            {
                public int ID { get; set; }
                public int? EventVersusID { get; set; }
                public string? FirstName { get; set; }
                public string? LastName { get; set; }
                public string? School { get; set; }
            }
        }
    }

    public class RankingDTO
    {
        public int RegionID { get; set; }
        public string? PlayerID { get; set; }
        public decimal BestResult { get; set; }
        public string RegionAbbreviation { get; set; } = "";
        public string? PlayerName { get; set; }
        public int Rank { get; set; }
    }

    /* ===================== STATE ===================== */

    private List<EventsDTO.EventDetails.Event> _allEvents = new();
    private List<EventsDTO.EventDetails.Event> _ongoingEvents = new();
    private List<EventsDTO.EventDetails.Event> _finishedEvents = new();
    private Dictionary<string, List<RankingDTO>> _eventRankings = new();
    private bool _isLoading = true;
    private System.Threading.Timer? _timer;

    /* ===================== INIT ===================== */

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        // Auto refresh every 10 seconds
        _timer = new System.Threading.Timer(async _ => await InvokeAsync(LoadData), null, 10000, 10000);
    }

    /* ===================== GET DATA ===================== */

    private async Task LoadData()
    {
        try
        {
            string url = "/Events/Details";
            var allEvents = await apiService.GetAsync<EventsDTO.EventDetails.Event>(url);

            if (allEvents != null)
            {
                // Filter for Athletics Field Events
                _allEvents = allEvents
                    .Where(e => e.Sport != null &&
                               e.Sport.Equals("Athletics", StringComparison.OrdinalIgnoreCase) &&
                               e.SportMainCat != null &&
                               e.SportMainCat.Contains("Field", StringComparison.OrdinalIgnoreCase))
                    .OrderBy(x => x.IsFinished == true)  // Unfinished first
                    .ThenBy(x => x.Subcategory)
                    .ToList();

                // FIXED: Separate by IsFinished instead of EventStage
                _ongoingEvents = _allEvents.Where(e => e.IsFinished != true).ToList();
                _finishedEvents = _allEvents.Where(e => e.IsFinished == true).ToList();

                // DEBUG: Log the counts
                Console.WriteLine($"[Field Events Dashboard] Total: {_allEvents.Count}, Ongoing: {_ongoingEvents.Count}, Finished: {_finishedEvents.Count}");

                // Get Rankings per Event
                foreach (var evt in _allEvents)
                {
                    try
                    {
                        var rankings = await apiService.GetAsync<RankingDTO>($"FieldEvents/GetRankings/{evt.ID}");
                        if (rankings != null && rankings.Any())
                        {
                            _eventRankings[evt.ID] = rankings.OrderBy(r => r.Rank).ToList();
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Could not load rankings for event {evt.ID}: {ex.Message}");
                        _eventRankings[evt.ID] = new List<RankingDTO>();
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading field events: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    /* ===================== HELPER METHODS ===================== */

    private string GetRankClass(int rank)
    {
        return rank switch
        {
            1 => "rank-1",
            2 => "rank-2",
            3 => "rank-3",
            _ => ""
        };
    }

    /* ===================== CLEANUP ===================== */

    public void Dispose()
    {
        _timer?.Dispose();
    }
}