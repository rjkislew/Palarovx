@page "/scoreboard/time-distance"
@using Client.Palaro2026.Services
@using System.Linq
@layout NoMainLayout
@inject APIService apiService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Swimming Events Scoreboard | PALARO 2026</PageTitle>

<style>
    /* --- IMPORTS --- */
    @@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;900&family=Rajdhani:wght@500;600;700&display=swap');

    :root {
        --bg-dark: #0a0a0a;
        --card-bg: rgba(30, 30, 30, 0.7);
        --card-border: rgba(255, 255, 255, 0.1);
        --accent-gold: #FFD700;
        --accent-blue: #00e5ff;
        --text-white: #ffffff;
    }

    body {
        background-color: var(--bg-dark);
        background-image: radial-gradient(circle at 15% 50%, rgba(0, 229, 255, 0.15) 0%, transparent 25%), radial-gradient(circle at 85% 30%, rgba(0, 229, 255, 0.1) 0%, transparent 25%);
        font-family: 'Rajdhani', sans-serif;
        color: white;
        min-height: 100vh;
    }

    .scoreboard-header {
        text-align: center;
        padding: 40px 0 20px;
    }

    .main-title {
        font-family: 'Orbitron', sans-serif;
        font-weight: 900;
        font-size: 3rem;
        background: linear-gradient(180deg, #00e5ff 0%, #0077ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: 4px;
        text-shadow: 0 0 20px rgba(0, 229, 255, 0.3);
    }

    .sport-subtitle {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.5rem;
        color: #00e5ff;
        margin-top: 10px;
        font-weight: 700;
    }

    /* MODERN CARD */
    .modern-card {
        background: var(--card-bg);
        border: 1px solid rgba(0, 229, 255, 0.2);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        height: 500px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

        .modern-card:hover {
            border-color: var(--accent-blue);
            box-shadow: 0 10px 30px rgba(0, 229, 255, 0.2);
            transform: translateY(-5px);
        }

    .card-header {
        padding: 15px 20px;
        background: rgba(0, 0, 0, 0.3);
        border-bottom: 1px solid rgba(0, 229, 255, 0.1);
        flex-shrink: 0;
        position: relative;
    }

    .event-name {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--accent-blue);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .event-details {
        font-size: 0.9rem;
        color: #aaa;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 5px;
    }

    .swimming-badge {
        background: linear-gradient(135deg, #00e5ff, #0077ff);
        color: white;
        padding: 2px 10px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: absolute;
        top: 15px;
        right: 15px;
    }

    /* SCROLLABLE PLAYER LIST */
    .player-list-container {
        flex-grow: 1;
        overflow-y: auto;
        padding: 10px;
    }

        /* Custom Scrollbar */
        .player-list-container::-webkit-scrollbar {
            width: 6px;
        }

        .player-list-container::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.1);
        }

        .player-list-container::-webkit-scrollbar-thumb {
            background: var(--accent-blue);
            border-radius: 3px;
        }

    .player-row {
        display: flex;
        align-items: center;
        padding: 8px 10px;
        border-bottom: 1px solid rgba(0, 229, 255, 0.1);
        font-size: 0.95rem;
        transition: background-color 0.2s ease;
    }

        .player-row:hover {
            background-color: rgba(0, 229, 255, 0.05);
        }

        .player-row:last-child {
            border-bottom: none;
        }

    .player-rank {
        width: 30px;
        font-family: 'Orbitron', sans-serif;
        font-weight: bold;
        color: #888;
        flex-shrink: 0;
    }

    .rank-1 {
        color: #FFD700;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
        font-size: 1.1rem;
    }

    .rank-2 {
        color: #C0C0C0;
    }

    .rank-3 {
        color: #CD7F32;
    }

    .player-info {
        flex-grow: 1;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        padding-right: 10px;
        min-width: 0;
    }

    .player-name {
        font-weight: 700;
        display: block;
        color: white;
    }

    .player-region {
        font-size: 0.75rem;
        color: var(--accent-blue);
        display: block;
    }

    .player-result {
        font-family: 'Orbitron', sans-serif;
        font-weight: bold;
        text-align: right;
        min-width: 90px;
        flex-shrink: 0;
        color: #00ff88;
    }

    /* FOOTER BUTTON */
    .card-footer {
        padding: 15px;
        background: rgba(0, 0, 0, 0.4);
        border-top: 1px solid rgba(0, 229, 255, 0.1);
        flex-shrink: 0;
    }

    .tv-btn {
        display: block;
        width: 100%;
        padding: 10px;
        background: linear-gradient(135deg, rgba(0, 229, 255, 0.1), rgba(0, 119, 255, 0.1));
        color: var(--accent-blue);
        text-align: center;
        text-decoration: none;
        border-radius: 8px;
        font-family: 'Orbitron';
        font-size: 0.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.2s;
        border: 1px solid rgba(0, 229, 255, 0.3);
    }

        .tv-btn:hover {
            background: linear-gradient(135deg, #00e5ff, #0077ff);
            color: white;
            box-shadow: 0 0 15px rgba(0, 229, 255, 0.4);
            border-color: var(--accent-blue);
        }

    .badge-live {
        background: #ff1744;
        color: white;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: bold;
        float: left;
        animation: pulse 1.5s infinite;
    }

    .badge-final {
        background: #4CAF50;
        color: white;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: bold;
        float: left;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.6;
        }

        100% {
            opacity: 1;
        }
    }

    .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #666;
    }

        .empty-state .icon {
            font-size: 4rem;
            color: rgba(0, 229, 255, 0.3);
            margin-bottom: 20px;
        }

        .empty-state .message {
            font-size: 1.2rem;
            color: #888;
            margin-bottom: 10px;
        }

        .empty-state .sub-message {
            font-size: 0.9rem;
            color: #666;
        }

    .sport-icon {
        color: var(--accent-blue);
        margin-right: 5px;
    }

    .gender-badge {
        background: rgba(255, 255, 255, 0.1);
        color: #ddd;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 0.8rem;
    }

    .level-badge {
        background: rgba(0, 229, 255, 0.2);
        color: var(--accent-blue);
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .stage-badge {
        background: rgba(255, 215, 0, 0.2);
        color: #FFD700;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 0.8rem;
    }
</style>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pb-16">

    <div class="scoreboard-header">
        <div class="main-title">SWIMMING EVENTS</div>
        <div class="sport-subtitle">OFFICIAL STANDINGS</div>
        <MudText Typo="Typo.body2" Style="color: #666; margin-top: 10px;">
            <MudIcon Icon="@Icons.Material.Filled.Pool" Size="Size.Small" Class="mr-1" />
            Live results and rankings for all swimming competitions
        </MudText>
    </div>

    @if (_isLoading)
    {
        <MudStack AlignItems="AlignItems.Center" Class="mt-16">
            <MudProgressCircular Indeterminate="true" Color="Color.Info" Size="Size.Large" />
            <MudText Class="mt-4" Style="color: var(--accent-blue);">Loading Swimming Events...</MudText>
        </MudStack>
    }
    else
    {
        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" Centered="true" Color="Color.Dark" Class="mt-4">

            <!-- LIVE TAB -->
            <MudTabPanel Text="ONGOING" Icon="@Icons.Material.Filled.Stream">
                @if (!_ongoingEvents.Any())
                {
                    <div class="empty-state">
                        <MudIcon Icon="@Icons.Material.Filled.Pool" Class="icon" />
                        <div class="message">No ongoing swimming events</div>
                        <div class="sub-message">Check back later for live swimming competitions</div>
                    </div>
                }
                else
                {
                    <MudGrid Class="mt-4" Spacing="3">
                        @foreach (var evt in _ongoingEvents)
                        {
                            <MudItem xs="12" sm="6" md="4" lg="3">
                                <div class="modern-card">
                                    <!-- HEADER -->
                                    <div class="card-header">
                                        <span class="swimming-badge">Swimming</span>
                                        <span class="badge-live">LIVE</span>
                                        <div class="event-name">
                                            <MudIcon Icon="@Icons.Material.Filled.Pool" Size="Size.Small" />
                                            @evt.Subcategory
                                        </div>
                                        <div class="event-details">
                                            <span class="gender-badge">@evt.Gender</span>
                                            <span class="level-badge">@evt.Level</span>
                                            <span class="stage-badge">@evt.EventStage</span>
                                        </div>
                                    </div>

                                    <!-- LIST OF PARTICIPANTS -->
                                    <div class="player-list-container">
                                        @if (_eventRankings.ContainsKey(evt.ID) && _eventRankings[evt.ID].Any())
                                        {
                                            @foreach (var player in _eventRankings[evt.ID])
                                            {
                                                <div class="player-row">
                                                    <div class="player-rank @GetRankClass(player.Rank)">
                                                        @(player.Rank > 0 ? $"#{player.Rank}" : "-")
                                                    </div>
                                                    <div class="player-info">
                                                        <span class="player-name">@player.PlayerName</span>
                                                        <span class="player-region">@player.RegionAbbreviation</span>
                                                    </div>
                                                    <div class="player-result">
                                                        @FormatSwimmingTime(player.Result)
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-column justify-center align-center h-100">
                                                <MudIcon Icon="@Icons.Material.Filled.TimerOff" Size="Size.Large" Color="Color.Secondary" Class="mb-3" />
                                                <MudText Typo="Typo.caption" Style="color:#666">Waiting for participants...</MudText>
                                                <MudText Typo="Typo.caption" Style="color:#444; font-size:0.8rem;">Results will appear here once entered</MudText>
                                            </div>
                                        }
                                    </div>

                                    <!-- FOOTER LINK -->
                                    <div class="card-footer">
                                        <a href="/scoreboard/time-distance/@evt.ID" target="_blank" class="tv-btn">
                                            <MudIcon Icon="@Icons.Material.Filled.Tv" Size="Size.Small" Class="mr-1" />
                                            OPEN TV VIEW
                                        </a>
                                    </div>
                                </div>
                            </MudItem>
                        }
                    </MudGrid>
                }
            </MudTabPanel>

            <!-- FINISHED TAB -->
            <MudTabPanel Text="FINISHED" Icon="@Icons.Material.Filled.EmojiEvents">
                @if (!_finishedEvents.Any())
                {
                    <div class="empty-state">
                        <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Class="icon" />
                        <div class="message">No completed swimming events</div>
                        <div class="sub-message">Completed events will appear here</div>
                    </div>
                }
                else
                {
                    <MudGrid Class="mt-4" Spacing="3">
                        @foreach (var evt in _finishedEvents)
                        {
                            <MudItem xs="12" sm="6" md="4" lg="3">
                                <div class="modern-card">
                                    <div class="card-header">
                                        <span class="swimming-badge">Swimming</span>
                                        <span class="badge-final">FINAL</span>
                                        <div class="event-name">
                                            <MudIcon Icon="@Icons.Material.Filled.Pool" Size="Size.Small" />
                                            @evt.Subcategory
                                        </div>
                                        <div class="event-details">
                                            <span class="gender-badge">@evt.Gender</span>
                                            <span class="level-badge">@evt.Level</span>
                                            <span class="stage-badge">@evt.EventStage</span>
                                        </div>
                                    </div>

                                    <div class="player-list-container">
                                        @if (_eventRankings.ContainsKey(evt.ID) && _eventRankings[evt.ID].Any())
                                        {
                                            @foreach (var player in _eventRankings[evt.ID])
                                            {
                                                <div class="player-row">
                                                    <div class="player-rank @GetRankClass(player.Rank)">
                                                        #@player.Rank
                                                    </div>
                                                    <div class="player-info">
                                                        <span class="player-name">@player.PlayerName</span>
                                                        <span class="player-region">@player.RegionAbbreviation</span>
                                                    </div>
                                                    <div class="player-result">
                                                        @FormatSwimmingTime(player.Result)
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-column justify-center align-center h-100">
                                                <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Large" Color="Color.Secondary" Class="mb-3" />
                                                <MudText Typo="Typo.caption" Style="color:#666">Final Results</MudText>
                                            </div>
                                        }
                                    </div>

                                    <div class="card-footer">
                                        <a href="/scoreboard/time-distance/@evt.ID" target="_blank" class="tv-btn">
                                            <MudIcon Icon="@Icons.Material.Filled.Assignment" Size="Size.Small" Class="mr-1" />
                                            VIEW OFFICIAL RESULTS
                                        </a>
                                    </div>
                                </div>
                            </MudItem>
                        }
                    </MudGrid>
                }
            </MudTabPanel>

        </MudTabs>
    }

</MudContainer>

@code {
    // --- VARIABLES ---
    private List<EventInfo> _allEvents = new();
    private List<EventInfo> _ongoingEvents = new();
    private List<EventInfo> _finishedEvents = new();
    private Dictionary<string, List<RankingDTO>> _eventRankings = new();
    private bool _isLoading = true;
    private System.Threading.Timer? _timer;

    // --- LIFECYCLE ---
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        // Auto refresh every 10 seconds for live updates
        _timer = new System.Threading.Timer(async _ => await InvokeAsync(LoadData), null, 10000, 10000);
    }

    private async Task LoadData()
    {
        try
        {
            // Load all time/distance events from the API
            var events = await apiService.GetAsync<EventInfo>("TimeDistanceEvents/Sports/AthleticsSwimming");

            if (events != null)
            {
                // Filter only Swimming events
                var swimmingEvents = events
                    .Where(e => e.Sport == "Swimming")
                    .GroupBy(e => e.ID)
                    .Select(g => g.First())
                    .ToList();

                _allEvents = swimmingEvents;

                // Categorize events based on EventStage
                _ongoingEvents = _allEvents
                    .Where(e => e.EventStage != "Completed" && e.EventStage != "Final")
                    .OrderBy(e => e.Subcategory)
                    .ThenBy(e => e.Gender)
                    .ThenBy(e => e.Level)
                    .ToList();

                _finishedEvents = _allEvents
                    .Where(e => e.EventStage == "Completed" || e.EventStage == "Final")
                    .OrderBy(e => e.Subcategory)
                    .ThenBy(e => e.Gender)
                    .ThenBy(e => e.Level)
                    .ToList();

                // Clear previous rankings
                _eventRankings.Clear();

                // Load rankings for each swimming event
                foreach (var evt in _allEvents)
                {
                    try
                    {
                        var rankings = await apiService.GetAsync<RankingDTO>($"TimeDistanceEvents/GetRankings/{evt.ID}");

                        if (rankings != null && rankings.Any())
                        {
                            // Save all rankings sorted by Rank (lowest rank first)
                            _eventRankings[evt.ID] = rankings
                                .Where(r => !string.IsNullOrEmpty(r.Result))
                                .OrderBy(r => r.Rank == 0 ? int.MaxValue : r.Rank)
                                .ThenBy(r => ParseSwimmingTime(r.Result))
                                .ToList();
                        }
                        else
                        {
                            _eventRankings[evt.ID] = new List<RankingDTO>();
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error loading rankings for event {evt.ID}: {ex.Message}");
                        _eventRankings[evt.ID] = new List<RankingDTO>();
                    }
                }
            }
            else
            {
                _allEvents = new List<EventInfo>();
                _ongoingEvents = new List<EventInfo>();
                _finishedEvents = new List<EventInfo>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading swimming events: {ex.Message}");
            _allEvents = new List<EventInfo>();
            _ongoingEvents = new List<EventInfo>();
            _finishedEvents = new List<EventInfo>();
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    // --- HELPER FOR RANK COLORS ---
    private string GetRankClass(int rank)
    {
        return rank switch
        {
            1 => "rank-1",
            2 => "rank-2",
            3 => "rank-3",
            _ => ""
        };
    }

    private string FormatSwimmingTime(string result)
    {
        if (string.IsNullOrEmpty(result) || result == "N/A")
            return "N/A";

        // Try to parse as TimeSpan for swimming times
        if (TimeSpan.TryParse(result, out TimeSpan time))
        {
            // Format swimming times properly
            if (time.Hours > 0)
            {
                return time.ToString(@"hh\:mm\:ss\.ff");
            }
            else if (time.Minutes > 0)
            {
                return time.ToString(@"mm\:ss\.ff");
            }
            else
            {
                return time.ToString(@"ss\.ff");
            }
        }

        // If it's already a formatted string, return as is
        if (result.Contains(":") || result.Contains("."))
            return result;

        // Try to parse as seconds
        if (double.TryParse(result, out double seconds))
        {
            var timeSpan = TimeSpan.FromSeconds(seconds);
            if (timeSpan.Minutes > 0)
            {
                return timeSpan.ToString(@"mm\:ss\.ff");
            }
            else
            {
                return timeSpan.ToString(@"ss\.ff");
            }
        }

        return result;
    }

    private double ParseSwimmingTime(string result)
    {
        if (string.IsNullOrEmpty(result))
            return double.MaxValue;

        if (TimeSpan.TryParse(result, out TimeSpan time))
        {
            return time.TotalSeconds;
        }

        if (double.TryParse(result, out double seconds))
        {
            return seconds;
        }

        return double.MaxValue;
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }

    // --- MODELS ---
    public class EventInfo
    {
        public string ID { get; set; } = "";
        public string? Sport { get; set; }
        public string? Subcategory { get; set; }
        public string? Gender { get; set; }
        public string? Level { get; set; }
        public string? EventStage { get; set; }
    }

    public class RankingDTO
    {
        public string RegionAbbreviation { get; set; } = "";
        public string? PlayerName { get; set; }
        public string Result { get; set; } = "";
        public int Rank { get; set; }
    }
}