    private EventInfo? _event;
    private List<ScoringRow> _scoringRows = new();
    private List<TeamPairing> _teamPairings = new();
    private List<SchoolRegions>? _allRegions;
    private bool _isLoading = true;
    private Timer? _timer;
    private string _categoryType = "";

    private bool IsTeamEvent => _categoryType == "Team" || _categoryType == "Mixed";
    private bool IsMixedTeam => _categoryType == "Mixed";
    private bool IsIndividual => _categoryType == "Individual";
    private bool Is1440Round => !string.IsNullOrEmpty(_event?.SportMainCat) &&
                               _event.SportMainCat.ToLower().Contains("1440");

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        _timer = new Timer(async _ => await InvokeAsync(LoadData), null, 2000, 2000);
    }

    private async Task LoadData()
    {
        try
        {
            // Load regions
            _allRegions = await apiService.GetAsync<SchoolRegions>("/Schools/Regions");

            // GET EVENT DETAILS FROM /Events/Details ENDPOINT
            var allEvents = await apiService.GetAsync<EventInfo>("/Events/Details");

            if (allEvents == null)
            {
                Console.WriteLine("[ERROR] Failed to load events from /Events/Details");
                return;
            }

            // Find the specific event
            _event = allEvents.FirstOrDefault(e => e.ID == EventID &&
                                                  e.Sport?.Equals("Archery", StringComparison.OrdinalIgnoreCase) == true);

            if (_event == null)
            {
                Console.WriteLine($"[ERROR] Event {EventID} not found in Archery events");
                return;
            }

            Console.WriteLine($"[DEBUG] Event {EventID} IsFinished = {_event.IsFinished}");

            _categoryType = GetCategoryType(_event.Subcategory);

            // Build scoring rows from EventVersus data if available
            BuildRowsFromEventVersus();

            // Load archery scoring data
            await LoadScores();

            if (IsTeamEvent && !Is1440Round)
            {
                CreateTeamPairings();
            }

            _isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void BuildRowsFromEventVersus()
    {
        _scoringRows.Clear();

        if (_event?.EventVersusList != null && _event.EventVersusList.Any())
        {
            foreach (var versus in _event.EventVersusList)
            {
                var region = _allRegions?.FirstOrDefault(r =>
                    r.Region == versus.Region || r.Abbreviation == versus.Abbreviation);

                // Get team members
                string teamMembers = "";
                if (versus.EventVersusTeamPlayersList != null && versus.EventVersusTeamPlayersList.Any())
                {
                    var players = versus.EventVersusTeamPlayersList
                        .Select(p => $"{p.FirstName} {p.LastName}".Trim())
                        .Where(p => !string.IsNullOrEmpty(p))
                        .ToList();

                    teamMembers = string.Join(", ", players);
                }

                // Try to parse the score
                int totalScore = 0;
                if (!string.IsNullOrEmpty(versus.Score) && int.TryParse(versus.Score, out int parsedScore))
                {
                    totalScore = parsedScore;
                }

                _scoringRows.Add(new ScoringRow
                {
                    RegionID = region?.ID ?? 0,
                    RegionName = region?.Abbreviation ?? versus.Abbreviation ?? versus.Region ?? "Unknown",
                    LogoFilename = region?.Region ?? "Default",
                    PlayerName = versus.Region ?? "Team",
                    TeamMembers = teamMembers,
                    TotalScore = totalScore,
                    Rank = string.IsNullOrEmpty(versus.Rank) ? 0 : int.TryParse(versus.Rank, out int rank) ? rank : 0
                });
            }
        }
    }

    private void CreateTeamPairings()
    {
        _teamPairings.Clear();

        if (_scoringRows.Count < 1) return;

        var rows = _scoringRows.ToList();
        int pairCount = (int)Math.Ceiling(rows.Count / 2.0);

        for (int i = 0; i < pairCount; i++)
        {
            int index1 = i * 2;
            int index2 = i * 2 + 1;

            var team1 = rows.ElementAtOrDefault(index1);
            var team2 = rows.ElementAtOrDefault(index2);

            if (team1 != null)
            {
                var pairing = new TeamPairing
                {
                    MatchStage = _event?.EventStage ?? $"Match {i + 1}",
                    Team1Name = team1.RegionName,
                    Team1Logo = team1.LogoFilename,
                    Team1Members = team1.TeamMembers,
                    Team1RegionID = team1.RegionID,
                    Team1Score = team1.TotalScore
                };

                if (team2 != null)
                {
                    pairing.Team2Name = team2.RegionName;
                    pairing.Team2Logo = team2.LogoFilename;
                    pairing.Team2Members = team2.TeamMembers;
                    pairing.Team2RegionID = team2.RegionID;
                    pairing.Team2Score = team2.TotalScore;
                }
                else
                {
                    pairing.Team2Name = "BYE";
                    pairing.Team2Logo = "Default";
                    pairing.Team2Members = "No Opponent";
                    pairing.Team2RegionID = 0;
                    pairing.Team2Score = 0;
                }

                _teamPairings.Add(pairing);
            }
        }
    }

    private async Task LoadScores()
    {
        try
        {
            // Still load scoring data from archery endpoint for detailed shot info
            var scores = await apiService.GetAsync<ArcheryScoringDTO>($"/score/ArcheryScoring/event/{EventID}");

            if (scores == null || !scores.Any()) return;

            // Update scoring rows with shot data
            foreach (var score in scores)
            {
                ScoringRow? row = null;

                if (IsTeamEvent)
                {
                    row = _scoringRows.FirstOrDefault(r => r.RegionID == score.RegionID);
                }
                else
                {
                    row = _scoringRows.FirstOrDefault(r =>
                        r.RegionID == score.RegionID &&
                        r.PlayerID == score.PlayerID);
                }

                if (row == null)
                {
                    // Create new row if not found in EventVersus
                    var region = _allRegions?.FirstOrDefault(r => r.ID == score.RegionID);
                    row = new ScoringRow
                    {
                        RegionID = score.RegionID,
                        RegionName = region?.Abbreviation ?? $"Region {score.RegionID}",
                        LogoFilename = region?.Region ?? "Default",
                        PlayerID = score.PlayerID ?? "",
                        PlayerName = score.PlayerName ?? "Unknown"
                    };
                    _scoringRows.Add(row);
                }

                row.TotalScore += score.ShotScore;
                row.ShotCount++;
                if (score.ShotScore > row.BestShot)
                    row.BestShot = score.ShotScore;
            }

            CalculateRankings();

            // Update team pairings with new scores
            foreach (var pairing in _teamPairings)
            {
                var team1Row = _scoringRows.FirstOrDefault(r => r.RegionID == pairing.Team1RegionID);
                var team2Row = _scoringRows.FirstOrDefault(r => r.RegionID == pairing.Team2RegionID);

                if (team1Row != null) pairing.Team1Score = team1Row.TotalScore;
                if (team2Row != null) pairing.Team2Score = team2Row.TotalScore;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading scores: {ex.Message}");
        }
    }

    private void CalculateRankings()
    {
        foreach (var row in _scoringRows)
            row.Rank = 0;

        var rankedRows = _scoringRows
            .Where(r => r.TotalScore > 0)
            .OrderByDescending(r => r.TotalScore)
            .ThenBy(r => r.RegionName)
            .ToList();

        int rank = 1;
        int? lastScore = null;

        foreach (var row in rankedRows)
        {
            if (lastScore != null && row.TotalScore < lastScore)
            {
                rank++;   // ✅ increment only when score drops
            }

            row.Rank = rank;
            lastScore = row.TotalScore;
        }
    }


    private string GetCategoryType(string? subcategory)
    {
        if (string.IsNullOrEmpty(subcategory))
            return "Individual";

        var subcategoryLower = subcategory.ToLower();

        if (subcategoryLower.Contains("mixed"))
            return "Mixed";
        else if (subcategoryLower.Contains("team"))
            return "Team";
        else
            return "Individual";
    }

    private string GetCategoryClass(string categoryType)
    {
        return categoryType.ToLower() switch
        {
            "team" => "category-team",
            "mixed" => "category-mixed",
            "individual" => "category-individual",
            _ => "category-individual"
        };
    }

    private string GetFormatDisplay(string? sportMainCat)
    {
        if (string.IsNullOrEmpty(sportMainCat))
            return "Standard Format";

        if (sportMainCat.ToLower().Contains("1440"))
            return "1440 Round • All vs All";
        else
            return "Team vs Team";
    }

    private string GetFormatInfo(string? subcategory, string? sportMainCat)
    {
        if (string.IsNullOrEmpty(sportMainCat))
            return "Standard Archery Competition";

        var mainCatLower = sportMainCat.ToLower();

        if (mainCatLower.Contains("olympic"))
            return "Olympic Round • Head-to-Head Elimination";
        else if (mainCatLower.Contains("1440"))
            return "1440 Round • Total Score Format • All Teams Compete";
        else if (mainCatLower.Contains("fita"))
            return "FITA Standard Round • Head-to-Head";
        else
            return sportMainCat;
    }

