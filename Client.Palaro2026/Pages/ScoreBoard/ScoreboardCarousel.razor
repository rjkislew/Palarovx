@page "/scoreboard/carousel"
@page "/scoreboard/carousel/{TargetSport}"
@using System.Threading
@using System.Linq
@using Client.Palaro2026.Services
@inject APIService apiService
@inject NavigationManager Navigation
@implements IDisposable
@layout NoMainLayout

<PageTitle>@(TargetSport ?? "Live") Carousel | PALARO 2026</PageTitle>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;900&family=Rajdhani:wght@500;600;700&family=Chakra+Petch:wght@600;700;800&display=swap');

    :root {
        --bg-dark: #050505;
        --card-bg: rgba(20, 20, 20, 0.95);
        --accent-gold: #FFD700;
        --accent-blue: #00e5ff;
        --accent-red: #ff1744;
        --text-white: #ffffff;
        --glass-border: rgba(255, 255, 255, 0.15);
    }

    html, body {
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        overflow: hidden; /* Keep hidden to prevent scroll bounce */
        background-color: var(--bg-dark);
        font-family: 'Rajdhani', sans-serif;
    }

    .carousel-container {
        height: 100vh;
        width: 100vw;
        background: radial-gradient(circle at 50% 30%, #1a1a1a 0%, #000000 100%);
        position: relative;
        padding: 2vh 2vw;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
    }

    /* HEADER */
    .global-header {
        width: 100%;
        text-align: center;
        z-index: 10;
        margin-bottom: 2vh;
        flex-shrink: 0;
    }

    .header-main-text {
        font-family: 'Orbitron';
        font-weight: 900;
        font-size: clamp(24px, 5vh, 60px);
        color: var(--accent-gold);
        letter-spacing: 0.5vw;
        text-transform: uppercase;
        text-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
    }

    .header-sub-text {
        font-family: 'Chakra Petch';
        color: rgba(255,255,255,0.6);
        font-size: clamp(12px, 2vh, 24px);
        letter-spacing: 0.2vw;
        text-transform: uppercase;
    }

    /* MUD CAROUSEL */
    .mud-carousel {
        height: 100% !important;
        width: 100% !important;
        flex-grow: 1;
    }

    .mud-carousel .mud-carousel-item {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* WRAPPER */
    .scoreboard-wrapper {
        width: 100%;
        max-width: 1600px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-bottom: 2vh;
    }

    /* SPORT PILL */
    .match-info-container {
        text-align: center;
        margin-bottom: 2vh;
        padding: 0.5vh 4vw;
        border-radius: 50px;
        background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.1) 50%, transparent 100%);
        border-top: 1px solid rgba(255,255,255,0.2);
        backdrop-filter: blur(10px);
        flex-shrink: 0;
    }

    .sport-title {
        font-family: 'Orbitron';
        font-size: clamp(20px, 4vh, 40px);
        font-weight: 800;
        color: white;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 0 0 20px rgba(0,229,255,0.8);
    }

    .match-meta {
        font-family: 'Rajdhani';
        font-size: clamp(12px, 2vh, 20px);
        color: var(--accent-blue);
        letter-spacing: 2px;
        font-weight: 700;
        text-transform: uppercase;
    }

    /* --- MATCH CARD GRID SYSTEM --- */
    .match-card {
        display: grid;
        /* Desktop Layout: Team | Score | Center | Score | Team */
        grid-template-columns: 1.2fr 1fr 0.6fr 1fr 1.2fr;
        grid-template-rows: 1fr auto; /* Main content | History Table */
        grid-template-areas:
            "teamA scoreA center scoreB teamB"
            "history history history history history";

        align-items: center;
        width: 98%;
        height: auto;
        min-height: 50vh;
        background: var(--card-bg);
        border: 2px solid var(--glass-border);
        box-shadow: 0 20px 50px rgba(0,0,0,0.8);
        border-radius: 30px;
        padding: 3vh 2vw;
        position: relative;
        gap: 10px;
    }

    /* GRID AREAS ASSIGNMENT */
    .area-team-a { grid-area: teamA; }
    .area-score-a { grid-area: scoreA; }
    .area-center { grid-area: center; }
    .area-score-b { grid-area: scoreB; }
    .area-team-b { grid-area: teamB; }
    .area-history { grid-area: history; }

    /* CONTENT STYLING */
    .team-col {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .logo-circle {
        width: clamp(80px, 18vh, 180px);
        height: clamp(80px, 18vh, 180px);
        background: radial-gradient(circle, #2a2a2a 0%, #050505 100%);
        border-radius: 50%;
        border: 4px solid #444;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        margin-bottom: 1.5vh;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .winner-glow {
        border-color: var(--accent-gold);
        box-shadow: 0 0 40px rgba(255, 215, 0, 0.3);
    }

    .team-name {
        font-family: 'Chakra Petch';
        font-size: clamp(16px, 3.5vh, 40px);
        font-weight: 800;
        color: white;
        line-height: 1.1;
        margin-bottom: 0.5vh;
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .team-region {
        font-family: 'Rajdhani';
        font-size: clamp(10px, 1.8vh, 20px);
        color: #aaa;
        text-transform: uppercase;
        font-weight: 600;
    }

    .score-col {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .main-score {
        font-family: 'Orbitron';
        font-size: clamp(60px, 14vh, 150px);
        font-weight: 900;
        color: #555;
        line-height: 1;
    }

    .score-winner {
        color: white;
        text-shadow: 0 0 40px rgba(255, 255, 255, 0.4);
    }

    .center-col {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1vh;
    }

    .status-badge {
        padding: 5px 15px;
        border-radius: 4px;
        font-family: 'Chakra Petch';
        font-weight: 700;
        font-size: clamp(12px, 1.8vh, 20px);
        background: rgba(255, 23, 68, 0.15);
        border: 1px solid var(--accent-red);
        color: var(--accent-red);
        white-space: nowrap;
        animation: pulse 2s infinite;
    }

    .sets-score {
        font-family: 'Orbitron';
        font-size: clamp(24px, 4vh, 40px);
        color: var(--accent-gold);
        font-weight: 700;
        white-space: nowrap;
    }

    .vs-text {
        font-family: 'Orbitron';
        font-size: 2vh;
        color: #333;
        font-style: italic;
        font-weight: 900;
    }

    /* HISTORY STRIP */
    .history-strip {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: 2vh;
    }

    .box-score-container {
        background: rgba(0,0,0,0.8);
        border: 1px solid rgba(255,255,255,0.15);
        border-radius: 10px;
        padding: 5px;
        overflow-x: auto; /* Enable scroll on small screens */
        max-width: 100%;
    }

    .history-table {
        border-collapse: collapse;
    }

    .history-table th, .history-table td {
        padding: 5px 15px;
        text-align: center;
        white-space: nowrap;
    }

    .history-table th {
        font-family: 'Rajdhani';
        color: #888;
        font-size: clamp(10px, 1.5vh, 16px);
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .history-table td {
        font-family: 'Chakra Petch';
        font-weight: 700;
        color: #888;
        font-size: clamp(14px, 2.5vh, 24px);
    }

    .history-table td.team-abbr {
        text-align: left;
        color: var(--accent-blue);
        font-family: 'Orbitron';
        border-right: 1px solid rgba(255,255,255,0.1);
    }

    .history-table td.set-win {
        color: var(--accent-gold);
        background: rgba(255, 215, 0, 0.08);
    }

    /* --- RESPONSIVE MEDIA QUERIES --- */

    /* TABLET & MOBILE PORTRAIT (Max Width 1024px) */
    @@media (max-width: 1024px) {
        .carousel-container {
            padding: 1vh 2vw;
            height: 100vh; /* Ensure full viewport */
            overflow-y: auto; /* Allow scroll if content is too tall */
        }

        .global-header {
            margin-bottom: 1vh;
        }

        .match-info-container {
            padding: 5px 20px;
            margin-bottom: 1vh;
        }

        /* Reform the Grid for Mobile */
        .match-card {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto auto auto auto auto;
            grid-template-areas:
                "center center"
                "teamA teamB"
                "scoreA scoreB"
                "history history";
            gap: 1vh 2vw;
            padding: 2vh 3vw;
            min-height: auto;
            width: 95%;
        }

        /* Adjust Layout Orders/Alignments */
        .area-center {
            flex-direction: row; /* Horizontal Status */
            justify-content: center;
            margin-bottom: 1vh;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            padding-bottom: 1vh;
            width: 100%;
        }

        .vs-text { display: none; } /* Hide "VS" on mobile */

        .status-badge {
            font-size: 16px;
            margin-right: 15px;
        }

        .sets-score {
            font-size: 24px;
        }

        /* Make Logos Smaller */
        .logo-circle {
            width: 70px;
            height: 70px;
            margin-bottom: 5px;
            border-width: 2px;
        }

        .team-name {
            font-size: 18px;
            white-space: normal; /* Allow wrap */
        }

        .team-region {
            font-size: 10px;
            margin-bottom: 1vh;
        }

        /* Make Scores Smaller and closer to logos */
        .main-score {
            font-size: 50px;
            margin-bottom: 1vh;
        }

        .history-strip {
            margin-top: 1vh;
        }

        .box-score-container {
            max-width: 90vw;
        }
    }

 
</style>

<div class="carousel-container">
    <div class="global-header">
        <div class="header-main-text">PALARO 2026</div>
        <div class="header-sub-text">OFFICIAL LIVE SCOREBOARD</div>
    </div>

    @if (_isLoading)
    {
        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Style="height:60vh; width:100%;">
            <MudProgressCircular Indeterminate="true" Color="Color.Info" Size="Size.Large" Style="transform: scale(2);" />
        </MudStack>
    }
    else if (_activeMatches.Count == 0)
    {
        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Style="height:60vh; width:100%;">
            <MudIcon Icon="@Icons.Material.Filled.TvOff" Style="color: #333; width: 10vh; height: 10vh;" />
            <MudText Typo="Typo.h5" Class="mt-3" Style="color: #555; font-family:'Orbitron';">NO LIVE GAMES</MudText>
        </MudStack>
    }
    else
    {
        <MudCarousel Class="mud-width-full"
                     Style="height:100%;"
                     ShowArrows="false"
                     ShowBullets="false"
                     EnableSwipeGesture="true"
                     AutoCycle="true"
                     TData="object"
                     CycleTime="@TimeSpan.FromSeconds(20)">

            @foreach (var match in _activeMatches)
            {
                <MudCarouselItem Transition="Transition.Fade" Color="@Color.Transparent">
                    <div class="scoreboard-wrapper">

                        <div class="match-info-container">
                            <div class="sport-title">@match.EventData.Sport</div>
                            <div class="match-meta">@match.EventData.Gender • @match.EventData.EventStage</div>
                        </div>

                        <div class="match-card">
                            <!-- Center Status (Area: center) -->
                            <div class="center-col area-center">
                                @if (!string.IsNullOrEmpty(match.PhaseText))
                                {
                                    <div class="status-badge">@match.PhaseText</div>
                                }
                                <div class="vs-text">VS</div>
                                @if (match.IsSetGame)
                                {
                                    <div class="sets-container">
                                        <div class="sets-score">@match.SetsA - @match.SetsB</div>
                                    </div>
                                }
                            </div>

                            <!-- Team A (Area: teamA) -->
                            <div class="team-col area-team-a">
                                <div class="logo-circle @(match.IsWinnerA ? "winner-glow" : "")">
                                    <MudImage Src="@($"https://palarongpambansa2026.com/attachments/media/regions/team_logo/{match.TeamA.Region}.webp")" ObjectFit="ObjectFit.Contain" Style="width:85%; height:85%;" />
                                </div>
                                <div class="team-name">@match.TeamA.Abbreviation</div>
                                <div class="team-region">@match.TeamA.Region</div>
                            </div>

                            <!-- Score A (Area: scoreA) -->
                            <div class="score-col area-score-a">
                                <div class="main-score @(match.IsWinnerA ? "score-winner" : "")">@match.DisplayScoreA</div>
                            </div>

                            <!-- Score B (Area: scoreB) -->
                            <div class="score-col area-score-b">
                                <div class="main-score @(match.IsWinnerB ? "score-winner" : "")">@match.DisplayScoreB</div>
                            </div>

                            <!-- Team B (Area: teamB) -->
                            <div class="team-col area-team-b">
                                <div class="logo-circle @(match.IsWinnerB ? "winner-glow" : "")">
                                    <MudImage Src="@($"https://palarongpambansa2026.com/attachments/media/regions/team_logo/{match.TeamB.Region}.webp")" ObjectFit="ObjectFit.Contain" Style="width:85%; height:85%;" />
                                </div>
                                <div class="team-name">@match.TeamB.Abbreviation</div>
                                <div class="team-region">@match.TeamB.Region</div>
                            </div>

                            <!-- HISTORY TABLE (Area: history) -->
                            <div class="history-strip area-history">
                                @if (match.MatchHistory != null && match.MatchHistory.Any())
                                {
                                    <div class="box-score-container">
                                        <table class="history-table">
                                            <thead>
                                                <tr>
                                                    <th class="team-head">TEAM</th>
                                                    @foreach (var set in match.MatchHistory)
                                                    {
                                                        <!-- Ilisdi ang @set.PhaseNumber aning function call -->
                                                        <th>@GetTableColumnHeader(match.EventData.Sport, set.PhaseNumber)</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td class="team-abbr">@match.TeamA.Abbreviation</td>
                                                    @foreach (var set in match.MatchHistory)
                                                    {
                                                        <td class="@(set.ScoreA > set.ScoreB ? "set-win" : "")">@set.ScoreA</td>
                                                    }
                                                </tr>
                                                <tr>
                                                    <td class="team-abbr">@match.TeamB.Abbreviation</td>
                                                    @foreach (var set in match.MatchHistory)
                                                    {
                                                        <td class="@(set.ScoreB > set.ScoreA ? "set-win" : "")">@set.ScoreB</td>
                                                    }
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </MudCarouselItem>
            }
        </MudCarousel>
    }
</div>

@code {
    [Parameter] public string? TargetSport { get; set; }

    public class CarouselMatchViewModel
    {
        public string EventID { get; set; } = "";
        public EventModel EventData { get; set; } = new();
        public EventVersusTeams TeamA { get; set; } = new();
        public EventVersusTeams TeamB { get; set; } = new();

        public int DisplayScoreA { get; set; }
        public int DisplayScoreB { get; set; }
        public int SetsA { get; set; }
        public int SetsB { get; set; }
        public bool IsSetGame { get; set; }
        public string PhaseText { get; set; } = "";
        public bool IsWinnerA { get; set; }
        public bool IsWinnerB { get; set; }
        public List<PhaseScoreModel> MatchHistory { get; set; } = new();
    }

    public class PhaseScoreModel
    {
        public int PhaseNumber { get; set; }
        public int ScoreA { get; set; }
        public int ScoreB { get; set; }
    }

    public class EventModel
    {
        public string ID { get; set; } = "";
        public string? Sport { get; set; }
        public string? Gender { get; set; }
        public string? EventStage { get; set; }
        public bool? IsFinished { get; set; }
        public List<EventVersusTeams>? EventVersusList { get; set; }
    }

    public class EventVersusTeams
    {
        public string? Region { get; set; }
        public string? Abbreviation { get; set; }
    }

    public class ClientTeamMatchDTO
    {
        public string? EventID { get; set; }
        public string? Region { get; set; }
        public int Phase { get; set; }
        public int Score { get; set; }
    }

    private List<CarouselMatchViewModel> _activeMatches = new();
    private bool _isLoading = true;
    private Timer? _timer;

    private const int DATA_REFRESH_RATE_MS = 5000;

    protected override async Task OnInitializedAsync()
    {
        await LoadCarouselData();
        _timer = new Timer(async _ => await InvokeAsync(RefreshScoresOnly), null, DATA_REFRESH_RATE_MS, DATA_REFRESH_RATE_MS);
    }

    private async Task LoadCarouselData()
    {
        try
        {
            var allEvents = await apiService.GetAsync<EventModel>("/Events/Details");

            if (allEvents != null)
            {
                var teamMatches = allEvents
                    .Where(e => e.EventVersusList?.Count == 2)
                    .Where(e => IsAllowedTeamSport(e.Sport))
                    .Where(e => e.IsFinished != true)
                    .ToList();

                if (!string.IsNullOrEmpty(TargetSport))
                {
                    teamMatches = teamMatches
                        .Where(e => (e.Sport?.ToLower() ?? "").Contains(TargetSport.ToLower()))
                        .ToList();
                }

                var viewModels = new List<CarouselMatchViewModel>();

                foreach (var evt in teamMatches)
                {
                    var scores = await apiService.GetAsync<ClientTeamMatchDTO>($"score/TeamMatch?eventId={evt.ID}");
                    var vm = ProcessMatchData(evt, scores ?? new List<ClientTeamMatchDTO>());
                    viewModels.Add(vm);
                }

                _activeMatches = viewModels;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading carousel: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshScoresOnly()
    {
        if (_activeMatches.Count == 0) return;

        foreach (var match in _activeMatches)
        {
            try
            {
                var scores = await apiService.GetAsync<ClientTeamMatchDTO>($"score/TeamMatch?eventId={match.EventID}");
                if (scores != null)
                {
                    var updatedVM = ProcessMatchData(match.EventData, scores);
                    match.DisplayScoreA = updatedVM.DisplayScoreA;
                    match.DisplayScoreB = updatedVM.DisplayScoreB;
                    match.SetsA = updatedVM.SetsA;
                    match.SetsB = updatedVM.SetsB;
                    match.PhaseText = updatedVM.PhaseText;
                    match.IsWinnerA = updatedVM.IsWinnerA;
                    match.IsWinnerB = updatedVM.IsWinnerB;
                    match.MatchHistory = updatedVM.MatchHistory;
                }
            }
            catch { }
        }
        StateHasChanged();
    }

    private bool IsAllowedTeamSport(string? sport)
    {
        if (string.IsNullOrEmpty(sport)) return false;
        var s = sport.ToLower();
        return s.Contains("basket") || s.Contains("volley") || s.Contains("tennis") ||
               s.Contains("badminton") || s.Contains("sepak") || s.Contains("futsal") ||
               s.Contains("football") || s.Contains("soccer") || s.Contains("base") || s.Contains("soft");
    }

    private CarouselMatchViewModel ProcessMatchData(EventModel evt, List<ClientTeamMatchDTO> scores)
    {
        var vm = new CarouselMatchViewModel
        {
            EventID = evt.ID,
            EventData = evt,
            TeamA = evt.EventVersusList![0],
            TeamB = evt.EventVersusList![1]
        };

        bool isSetGame = IsSetBasedSport(evt.Sport);
        vm.IsSetGame = isSetGame;

        if (!scores.Any()) return vm;

        int maxPhase = scores.Max(s => s.Phase);
        vm.PhaseText = GetPhaseText(evt.Sport, maxPhase);

        for (int i = 1; i <= maxPhase; i++)
        {
            var sA = GetScore(scores, vm.TeamA.Region, i);
            var sB = GetScore(scores, vm.TeamB.Region, i);

            if (sA > 0 || sB > 0 || i == maxPhase)
            {
                vm.MatchHistory.Add(new PhaseScoreModel { PhaseNumber = i, ScoreA = sA, ScoreB = sB });
            }
        }

        if (isSetGame)
        {
            int setsA = 0, setsB = 0;
            for (int i = 1; i <= maxPhase; i++)
            {
                var sA = GetScore(scores, vm.TeamA.Region, i);
                var sB = GetScore(scores, vm.TeamB.Region, i);

                if (i < maxPhase)
                {
                    if (sA > sB) setsA++;
                    else if (sB > sA) setsB++;
                }
            }
            vm.SetsA = setsA;
            vm.SetsB = setsB;
            vm.DisplayScoreA = GetScore(scores, vm.TeamA.Region, maxPhase);
            vm.DisplayScoreB = GetScore(scores, vm.TeamB.Region, maxPhase);
        }
        else
        {
            vm.DisplayScoreA = scores.Where(s => s.Region == vm.TeamA.Region).Sum(s => s.Score);
            vm.DisplayScoreB = scores.Where(s => s.Region == vm.TeamB.Region).Sum(s => s.Score);
        }

        if (vm.DisplayScoreA > vm.DisplayScoreB) vm.IsWinnerA = true;
        if (vm.DisplayScoreB > vm.DisplayScoreA) vm.IsWinnerB = true;

        return vm;
    }

    private int GetScore(List<ClientTeamMatchDTO> scores, string? region, int phase)
    {
        return scores.FirstOrDefault(s => s.Region == region && s.Phase == phase)?.Score ?? 0;
    }

    private bool IsSetBasedSport(string? sport)
    {
        if (string.IsNullOrEmpty(sport)) return false;
        var s = sport.ToLower();
        return s.Contains("volley") || s.Contains("tennis") || s.Contains("badminton") || s.Contains("sepak") || s.Contains("table");
    }

    // --- I-paste ni sa pinaka-ubos sa imong @code section ---

    // 1. Para sa Big Status Badge (tunga sa scoreboard)
    private string GetPhaseText(string? sport, int phase)
    {
        var s = sport?.ToLower() ?? "";

        if (s.Contains("basket"))
        {
            if (phase <= 4) return $"Q{phase}";
            if (phase == 5) return "OT";
            return $"{phase - 4}OT";
        }

        if (s.Contains("base") || s.Contains("soft")) return $"INN {phase}";
        return $"SET {phase}";
    }

    // 2. Para sa Table Header (sulat sa history table)
    private string GetTableColumnHeader(string? sport, int phase)
    {
        var s = sport?.ToLower() ?? "";

        if (s.Contains("basket"))
        {
            if (phase <= 4) return $"Q{phase}";
            if (phase == 5) return "OT";
            return $"{phase - 4}OT";
        }

        if (s.Contains("base") || s.Contains("soft")) return $"{phase}";
        return phase.ToString();
    }

    public void Dispose() => _timer?.Dispose();
}