@page "/scoreboard/archery"
@using System.Threading
@using System.Linq
@using Client.Palaro2026.Services
@inject APIService apiService
@inject NavigationManager Navigation
@implements IDisposable
@layout NoMainLayout

<PageTitle>Archery Scoreboard | PALARO 2026</PageTitle>

<style>
    /* --- FONTS & VARS (MATCHING TEAM THEME) --- */
    @@import url('https://fonts.cdnfonts.com/css/evil-empire');
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&family=Chakra+Petch:wght@600;700;800&display=swap');

    :root {
        --pal-blue: #023E8A;
        --pal-dark-blue: #001845;
        --pal-gold: #FFB400;
        --pal-red: #EA0000;
        --bg-gradient-start: #f8f9fa;
        --card-bg: rgba(255, 255, 255, 0.95);
        --font-header: 'Evil Empire', sans-serif;
        --font-body: 'Nunito', sans-serif;
        --font-tech: 'Chakra Petch', sans-serif;
    }

    /* BACKGROUND */
    .dashboard-bg {
        background: radial-gradient(circle at 50% 30%, #ffffff 0%, #e0e7ff 100%);
        min-height: 100vh;
        width: 100%;
        padding-bottom: 12vh; /* Space for footer */
        font-family: var(--font-body);
        color: var(--pal-dark-blue);
        overflow-x: hidden;
    }

    /* HEADER PILL (MATCHING TEAM MATCH INFO) */
    .header-container {
        display: flex;
        justify-content: center;
        padding-top: 4vh;
        margin-bottom: 4vh;
    }

    .header-pill {
        text-align: center;
        padding: 20px 60px;
        border-radius: 40px;
        background: var(--pal-dark-blue);
        border: 3px solid var(--pal-gold);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        width: fit-content;
    }

    .main-title {
        font-family: var(--font-header);
        font-size: clamp(2rem, 5vw, 3.5rem);
        color: white;
        text-transform: uppercase;
        letter-spacing: 2px;
        line-height: 1;
        text-shadow: 2px 2px 0px #000000;
        margin-bottom: 5px;
    }

    .sub-title {
        font-family: var(--font-tech);
        color: var(--pal-gold);
        font-size: 1.2rem;
        letter-spacing: 4px;
        font-weight: 700;
        text-transform: uppercase;
    }

    /* CARD DESIGN (MATCHING TEAM MATCH CARD) */
    .event-link {
        text-decoration: none;
        display: block;
        height: 100%;
        transition: transform 0.3s ease;
    }

        .event-link:hover {
            transform: translateY(-5px);
        }

    .event-card {
        background: var(--card-bg);
        border: 1px solid #d1d9e6;
        border-top: 5px solid var(--pal-gold);
        border-bottom: 5px solid var(--pal-blue);
        border-radius: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        height: 100%;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    /* BADGES */
    .status-container {
        display: flex;
        justify-content: space-between;
        padding: 15px 20px;
        align-items: center;
    }

    .event-type-badge {
        font-family: var(--font-tech);
        font-weight: 700;
        color: var(--pal-blue);
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .status-badge {
        padding: 4px 15px;
        border-radius: 20px;
        font-family: var(--font-tech);
        font-weight: 700;
        font-size: 0.8rem;
        letter-spacing: 1px;
        color: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .badge-live {
        background: var(--pal-red);
        border: 1px solid white;
        animation: pulse 2s infinite;
    }

    .badge-final {
        background: var(--pal-dark-blue);
        border: 1px solid var(--pal-gold);
        color: var(--pal-gold);
    }

    /* CONTENT */
    .card-content {
        padding: 0 20px 20px 20px;
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .sport-icon-circle {
        width: 60px;
        height: 60px;
        background: white;
        border-radius: 50%;
        border: 3px solid #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px auto;
        color: var(--pal-dark-blue);
        font-size: 1.5rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .event-name {
        font-family: var(--font-header);
        color: var(--pal-dark-blue);
        font-size: 1.8rem;
        line-height: 1.1;
        margin-bottom: 5px;
    }

    .event-sub {
        font-family: var(--font-tech);
        color: var(--pal-blue);
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        margin-bottom: 15px;
    }

    /* SCORE PREVIEW BOX */
    .score-box {
        background: #f1f3f5;
        border-radius: 15px;
        padding: 15px;
        margin-top: auto;
        border: 1px solid #dee2e6;
    }

    .score-main {
        font-family: 'Chakra Petch', sans-serif;
        font-weight: 800;
        font-size: 1.5rem;
        color: var(--pal-dark-blue);
    }

    .score-sub {
        font-size: 0.8rem;
        color: #6c757d;
        font-weight: 700;
        text-transform: uppercase;
    }

    /* FOOTER (FIXED) */
    .ticker-footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 8vh;
        background: linear-gradient(to bottom, #ffffff, #f1f3f5);
        border-top: 3px solid var(--pal-gold);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        box-shadow: 0 -5px 15px rgba(0,0,0,0.1);
    }

    .ticker-track {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 3vw;
    }

    .footer-logo {
        height: 4vh;
        width: auto;
        object-fit: contain;
    }

    /* MUD TABS OVERRIDE */
    .mud-tabs-tabbar {
        background-color: transparent !important;
    }

    .mud-tab {
        color: #6c757d !important;
        font-family: var(--font-tech) !important;
        font-weight: 700 !important;
        font-size: 1.1rem !important;
        transition: all 0.3s;
    }

    .mud-tab-active {
        color: var(--pal-dark-blue) !important;
        font-weight: 900 !important;
        border-bottom: 3px solid var(--pal-gold);
    }

    .mud-tabs-indicator {
        background-color: var(--pal-gold) !important;
        height: 4px;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(234, 0, 0, 0.7);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(234, 0, 0, 0);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(234, 0, 0, 0);
        }
    }
</style>

<div class="dashboard-bg">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">

        <!-- HEADER -->
        <div class="header-container">
            <div class="header-pill">
                <div class="main-title">PALARONG PAMBANSA 2026</div>
                <div class="sub-title">ARCHERY SCOREBOARD</div>
            </div>
        </div>

        @if (_isLoading)
        {
            <MudStack AlignItems="AlignItems.Center" Class="mt-16">
                <MudProgressCircular Indeterminate="true" Style="color: var(--pal-blue);" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-4" Style="font-family:'Chakra Petch'; color:var(--pal-dark-blue);">LOADING EVENTS...</MudText>
            </MudStack>
        }
        else if (!_archeryEvents.Any())
        {
            <MudPaper Class="pa-16 d-flex flex-column align-center justify-center mt-4" Style="background-color: rgba(255,255,255,0.8); border-radius: 30px; border: 2px dashed #ccc;">
                <MudIcon Icon="@Icons.Material.Filled.EventBusy" Size="Size.Large" Style="color: #999; width: 60px; height: 60px;" />
                <MudText Typo="Typo.h5" Class="mt-4" Style="color: var(--pal-dark-blue); font-family:'Evil Empire';">NO ARCHERY EVENTS</MudText>
                <MudText Typo="Typo.body2" Style="color: #666;">Waiting for schedule...</MudText>
            </MudPaper>
        }
        else
        {
            <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="mt-6" Centered="true">

                <!-- TAB 1: LIVE -->
                <MudTabPanel Text="LIVE / ONGOING">
                    @{
                        var liveEvents = _archeryEvents.Where(e => e.IsFinished != true).ToList();
                    }

                    @if (!liveEvents.Any())
                    {
                        <div class="d-flex justify-center mt-10">
                            <MudText Typo="Typo.h6" Style="color: #777; font-family:'Chakra Petch'">NO LIVE EVENTS AT THE MOMENT</MudText>
                        </div>
                    }
                    else
                    {
                        <MudGrid Spacing="4">
                            @foreach (var evt in liveEvents)
                            {
                                <MudItem xs="12" md="6" lg="4" xl="3">
                                    <a href="/scoreboard/archery/@evt.ID" class="event-link">
                                        <div class="event-card">
                                            <div class="status-container">
                                                <div class="event-type-badge">@(evt.Level ?? "Open")</div>
                                                <div class="status-badge badge-live">LIVE</div>
                                            </div>

                                            <div class="card-content">
                                                <div class="sport-icon-circle">
                                                    <MudIcon Icon="@GetArcheryIcon(evt.Subcategory)" />
                                                </div>

                                                <div class="event-name">@(evt.SportMainCat ?? "ARCHERY")</div>
                                                <div class="event-sub">@(evt.Gender ?? "Mixed") • @(evt.EventStage ?? "Competition")</div>

                                                <div class="score-box">
                                                    <div class="score-main">IN PROGRESS</div>
                                                    <div class="score-sub">@(evt.Subcategory ?? "Individual")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </MudItem>
                            }
                        </MudGrid>
                    }
                </MudTabPanel>

                <!-- TAB 2: COMPLETED -->
                <MudTabPanel Text="OFFICIAL RESULTS">
                    @{
                        var finishedEvents = _archeryEvents.Where(e => e.IsFinished == true).ToList();
                    }

                    @if (!finishedEvents.Any())
                    {
                        <div class="d-flex justify-center mt-10">
                            <MudText Typo="Typo.h6" Style="color: #777; font-family:'Chakra Petch'">NO RESULTS POSTED YET</MudText>
                        </div>
                    }
                    else
                    {
                        <MudGrid Spacing="4">
                            @foreach (var evt in finishedEvents)
                            {
                                <MudItem xs="12" md="6" lg="4" xl="3">
                                    <a href="/scoreboard/archery/@evt.ID" class="event-link">
                                        <div class="event-card">
                                            <div class="status-container">
                                                <div class="event-type-badge">@(evt.Level ?? "Open")</div>
                                                <div class="status-badge badge-final">FINAL</div>
                                            </div>

                                            <div class="card-content">
                                                <div class="sport-icon-circle" style="border-color: var(--pal-gold); color: var(--pal-gold);">
                                                    <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" />
                                                </div>

                                                <div class="event-name">@(evt.SportMainCat ?? "ARCHERY")</div>
                                                <div class="event-sub">@(evt.Gender ?? "Mixed") • @(evt.EventStage ?? "Finals")</div>

                                                <div class="score-box" style="background: #e3f2fd; border-color: #90caf9;">
                                                    <div class="score-main" style="color: var(--pal-blue);">RESULTS</div>
                                                    <div class="score-sub">CLICK TO VIEW</div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </MudItem>
                            }
                        </MudGrid>
                    }
                </MudTabPanel>
            </MudTabs>
        }
    </MudContainer>

    <!-- FIXED FOOTER -->
    <div class="ticker-footer">
        <div class="ticker-track">
            <img src="/media/images/2031.png" class="footer-logo" alt="Palaro" />
            <img src="/media/images/deped.png" class="footer-logo" alt="DepEd" />
            <img src="/media/images/bagongpilipinas.png" class="footer-logo" alt="Bagong Pilipinas" />
            <img src="/media/logo/Palarong Pambansa Logo.webp" onerror="this.src='/media/images/2031.png'" class="footer-logo" alt="Runner" />
            <img src="/media/images/pgas.png" class="footer-logo" alt="LGU" />
        </div>
    </div>
</div>

@code {
    /* ===================== MODELS ===================== */
    public class EventsDTO
    {
        public class EventDetails
        {
            public class Event
            {
                public string ID { get; set; } = null!;
                public string? EventStage { get; set; }
                public string? SportMainCat { get; set; }
                public string? Sport { get; set; }
                public string? Subcategory { get; set; }
                public string? Gender { get; set; }
                public string? Level { get; set; }
                public bool? IsFinished { get; set; }
            }
        }
    }

    /* ===================== STATE ===================== */
    private List<EventsDTO.EventDetails.Event> _archeryEvents = new();
    private bool _isLoading = true;
    private Timer? _refreshTimer;

    /* ===================== INIT ===================== */
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        _refreshTimer = new Timer(async _ => await InvokeAsync(LoadData), null, 5000, 5000);
    }

    /* ===================== GET DATA ===================== */
    private async Task LoadData()
    {
        try
        {
            string url = "/Events/Details";
            var allEvents = await apiService.GetAsync<EventsDTO.EventDetails.Event>(url);

            if (allEvents != null)
            {
                _archeryEvents = allEvents
                    .Where(e => e.Sport != null && e.Sport.Equals("Archery", StringComparison.OrdinalIgnoreCase))
                    .OrderBy(x => x.IsFinished == true)
                    .ThenBy(x => x.Subcategory)
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private string GetArcheryIcon(string? subcategory)
    {
        if (string.IsNullOrEmpty(subcategory)) return Icons.Material.Filled.Adjust;
        var s = subcategory.ToLower();
        if (s.Contains("recurve")) return Icons.Material.Filled.ArrowRightAlt;
        if (s.Contains("compound")) return Icons.Material.Filled.Bolt;
        if (s.Contains("team")) return Icons.Material.Filled.Groups;
        return Icons.Material.Filled.Adjust;
    }

    public void Dispose() => _refreshTimer?.Dispose();
}