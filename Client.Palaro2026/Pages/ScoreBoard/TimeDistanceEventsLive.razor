@page "/scoreboard/track-events/{EventID}"
@using System.Threading
@using System.Linq
@using Client.Palaro2026.Services
@inject APIService apiService
@inject NavigationManager Navigation
@implements IDisposable
@layout NoMainLayout

<PageTitle>Track Events Scoring | PALARO 2026</PageTitle>

<style>
    /* --- THEME IMPORTS --- */
    @@import url('https://fonts.cdnfonts.com/css/evil-empire');
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&family=Chakra+Petch:wght@500;600;700;800&family=JetBrains+Mono:wght@700&display=swap');

    :root {
        --pal-blue: #023E8A;
        --pal-dark-blue: #001845;
        --pal-gold: #FFB400;
        --pal-gold-dim: #D4AF37;
        --pal-silver: #C0C0C0;
        --pal-bronze: #CD7F32;
        --pal-red: #D90429;
        --bg-gradient: radial-gradient(circle at 50% 0%, #ffffff 0%, #e2e8f0 100%);
    }

    body {
        background: var(--bg-gradient);
        font-family: 'Nunito', sans-serif;
        overflow-x: hidden;
        margin: 0;
    }

    .tv-screen {
        min-height: 100vh;
        width: 100vw;
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-image: url('/images/subtle-pattern.png'); /* Optional texture */
        background-size: cover;
    }

    /* --- HEADER SECTION --- */
    .tournament-header {
        text-align: center;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .palaro-branding {
        font-family: 'Evil Empire', sans-serif;
        font-size: 3rem;
        color: var(--pal-dark-blue);
        letter-spacing: 3px;
        text-transform: uppercase;
        line-height: 1;
        text-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .event-title-main {
        font-family: 'Evil Empire', sans-serif;
        font-size: 5rem;
        background: linear-gradient(180deg, var(--pal-blue) 0%, var(--pal-dark-blue) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        line-height: 0.9;
        margin: 10px 0;
        filter: drop-shadow(0 4px 0px rgba(0,0,0,0.1));
    }

    /* --- METADATA CHIPS --- */
    .meta-container {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 15px;
    }

    .meta-chip {
        background: white;
        padding: 8px 25px;
        border-radius: 50px;
        font-family: 'Chakra Petch', sans-serif;
        font-weight: 700;
        font-size: 1.2rem;
        color: var(--pal-dark-blue);
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border: 2px solid #e2e8f0;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .meta-chip i {
            color: var(--pal-gold);
        }

    /* --- STATUS BADGES --- */
    .status-badge {
        padding: 8px 30px;
        border-radius: 6px;
        font-family: 'Chakra Petch', sans-serif;
        font-weight: 800;
        font-size: 1.2rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .live {
        background: var(--pal-red);
        color: white;
        animation: pulse-red 1.5s infinite;
    }

    .final {
        background: #10b981;
        color: white;
    }

    /* --- RESULTS CARD --- */
    .results-card {
        width: 100%;
        max-width: 1400px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 50px rgba(0, 24, 69, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.5);
        overflow: hidden;
        margin-top: 20px;
        animation: slideUp 0.6s ease-out;
    }

    /* --- TABLE STYLING --- */
    .mud-table {
        background: transparent !important;
    }

    .mud-table-head {
        background: var(--pal-dark-blue) !important;
    }

    .header-text {
        color: white !important;
        font-family: 'Chakra Petch', sans-serif !important;
        font-weight: 700 !important;
        font-size: 1.1rem !important;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 20px !important;
    }

    .rank-cell {
        font-family: 'Evil Empire', sans-serif;
        font-size: 2.2rem;
        padding: 15px 25px !important;
        width: 100px;
        text-align: center;
        line-height: 1;
    }

    .player-name {
        font-family: 'Chakra Petch', sans-serif;
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--pal-dark-blue);
        text-transform: uppercase;
    }

    .region-container {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .region-logo-wrapper {
        width: 45px;
        height: 45px;
        background: white;
        border-radius: 50%;
        padding: 2px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .region-logo-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border-radius: 50%;
        }

    .region-text {
        font-family: 'Nunito', sans-serif;
        font-weight: 700;
        font-size: 1.1rem;
        color: #475569;
    }

    .result-time {
        font-family: 'JetBrains Mono', monospace; /* Digital look */
        font-weight: 700;
        font-size: 1.8rem;
        color: var(--pal-blue);
        letter-spacing: -1px;
    }

    .lane-badge {
        background: #f1f5f9;
        color: #64748b;
        font-family: 'Chakra Petch', sans-serif;
        font-weight: 700;
        padding: 5px 15px;
        border-radius: 4px;
        font-size: 1rem;
    }

    /* --- TOP 3 HIGHLIGHTS --- */
    .row-gold {
        background: linear-gradient(90deg, rgba(255, 215, 0, 0.15) 0%, rgba(255, 255, 255, 0) 100%) !important;
        border-left: 8px solid var(--pal-gold);
    }

    .rank-cell.gold {
        color: var(--pal-gold-dim);
        text-shadow: 0 2px 0 rgba(255,255,255,0.5);
    }

    .row-silver {
        background: linear-gradient(90deg, rgba(192, 192, 192, 0.15) 0%, rgba(255, 255, 255, 0) 100%) !important;
        border-left: 8px solid var(--pal-silver);
    }

    .rank-cell.silver {
        color: #71717a;
        text-shadow: 0 2px 0 rgba(255,255,255,0.5);
    }

    .row-bronze {
        background: linear-gradient(90deg, rgba(205, 127, 50, 0.15) 0%, rgba(255, 255, 255, 0) 100%) !important;
        border-left: 8px solid var(--pal-bronze);
    }

    .rank-cell.bronze {
        color: #a16207;
        text-shadow: 0 2px 0 rgba(255,255,255,0.5);
    }

    .medal-icon {
        margin-right: 5px;
        font-size: 1.5rem;
    }

    /* --- ANIMATIONS --- */
    @@keyframes pulse-red {
        0% {
            box-shadow: 0 0 0 0 rgba(217, 4, 41, 0.7);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(217, 4, 41, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(217, 4, 41, 0);
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .back-btn {
        position: absolute;
        top: 30px;
        left: 30px;
        background: white;
        border: none;
        padding: 10px 20px;
        border-radius: 30px;
        font-family: 'Chakra Petch', sans-serif;
        font-weight: 700;
        color: var(--pal-blue);
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        cursor: pointer;
        transition: transform 0.2s;
        z-index: 100;
    }

        .back-btn:hover {
            transform: scale(1.05);
        }

</style>

<div class="tv-screen">
    <button class="back-btn" onclick="history.back()">
        <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Style="vertical-align:middle; margin-right:5px; font-size:1.2rem;" />
        BACK
    </button>

    @if (_isLoading)
    {
        <div style="height: 80vh; display: flex; flex-direction: column; align-items: center; justify-content: center;">
            <MudProgressCircular Indeterminate Color="Color.Primary" Size="Size.Large" StrokeWidth="4" />
            <div style="margin-top: 20px; font-family: 'Evil Empire'; font-size: 2rem; color: var(--pal-blue); letter-spacing: 2px;">
                LOADING RESULTS...
            </div>
        </div>
    }
    else if (_eventDetails == null)
    {
        <div class="results-card" style="padding: 60px; text-align: center;">
            <MudIcon Icon="@Icons.Material.Outlined.SentimentDissatisfied" Style="font-size: 6rem; color: #94a3b8;" />
            <h1 style="font-family: 'Evil Empire'; color: #475569; margin-top: 20px;">EVENT NOT FOUND</h1>
        </div>
    }
    else
    {
        <!-- HEADER -->
        <div class="tournament-header">
            <div class="palaro-branding">PALARONG PAMBANSA 2026</div>

            <div class="event-title-main">
                @_eventDetails.Subcategory
            </div>

            <!-- STATUS & META -->
            <div style="margin-bottom: 20px;">
                @{
                    var isLive = _eventDetails.EventStage?.Equals("Live", StringComparison.OrdinalIgnoreCase) == true ||
                    _eventDetails.EventStage?.Equals("In Progress", StringComparison.OrdinalIgnoreCase) == true;
                    var isCompleted = _eventDetails.EventStage?.Equals("Completed", StringComparison.OrdinalIgnoreCase) == true;
                }
                @if (isCompleted)
                {
                    <span class="status-badge final">OFFICIAL FINAL</span>
                }
                else if (isLive)
                {

                    <span class="status-badge live">LIVE EVENT</span>
                }
            </div>

            <div class="meta-container">
                <div class="meta-chip">@_eventDetails.Sport</div>
                <div class="meta-chip">@_eventDetails.Level</div>
                <div class="meta-chip">@_eventDetails.Gender</div>
                @if (!string.IsNullOrEmpty(_eventDetails.SportMainCat))
                {
                    <div class="meta-chip" style="background:#f1f5f9; color:#64748b;">@_eventDetails.SportMainCat</div>
                }
            </div>
        </div>

        <!-- TABLE -->
        @if (_rankings.Any())
        {
            <div class="results-card">
                <MudTable Items="_rankings.OrderBy(r => r.Rank).ToList()"
                          Hover="true"
                          Breakpoint="Breakpoint.None"
                          Dense="false"
                          RowClassFunc="@RowStyleFunc">
                    <HeaderContent>
                        <MudTh Class="header-text" Style="text-align:center;">Rank</MudTh>
                        <MudTh Class="header-text">Athlete</MudTh>
                        <MudTh Class="header-text">Region</MudTh>
                        <MudTh Class="header-text" Style="text-align:right;">Time / Result</MudTh>
                        <MudTh Class="header-text" Style="text-align:center;">Lane</MudTh>
                    </HeaderContent>

                    <RowTemplate>
                        <MudTd Class="@GetRankCellClass(context.Rank)">
                            @if (context.Rank > 0 && context.Result != "TBA")
                            {
                                @if (context.Rank == 1)
                                {
                                    <span class="medal-icon">🥇</span>
                                }
                                @if (context.Rank == 2)
                                {
                                    <span class="medal-icon">🥈</span>
                                }
                                @if (context.Rank == 3)
                                {
                                    <span class="medal-icon">🥉</span>
                                }
                                @context.Rank
                            }
                            else
                            {
                                <span style="opacity:0.3">-</span>
                            }
                        </MudTd>

                        <MudTd>
                            <div class="player-name">
                                @(string.IsNullOrEmpty(context.PlayerName) || context.PlayerName == "TBA" ? "TBA" : context.PlayerName)
                            </div>
                        </MudTd>

                        <MudTd>
                            <div class="region-container">
                                <div class="region-logo-wrapper">
                                    <img src="@GetRegionLogo(context.RegionLogo)"
                                         onerror="this.onerror=null; this.src='/images/region-placeholder.png'; this.style.padding='5px';" />
                                </div>
                                <div>
                                    <div style="font-family:'Chakra Petch'; font-weight:800; font-size:1.2rem; color:var(--pal-dark-blue); line-height:1;">
                                        @context.RegionName
                                    </div>
                                    <div class="region-text" style="font-size:0.8rem; opacity:0.7;">
                                        @GetRegionInitials(context.RegionName)
                                    </div>
                                </div>
                            </div>
                        </MudTd>

                        <MudTd Style="text-align:right;">
                            <div class="result-time">
                                @if (!string.IsNullOrEmpty(context.Result) && context.Result != "TBA")
                                {
                                    @context.Result
                                }
                                else
                                {
                                    <span style="color:#cbd5e1; font-size:1.2rem;">--:--.--</span>
                                }
                            </div>
                        </MudTd>

                        <MudTd Style="text-align:center;">
                            @if (!string.IsNullOrEmpty(context.AssignedLane) && context.AssignedLane != "TBA")
                            {
                                <span class="lane-badge">@GetTrackFromAssignedLane(context.AssignedLane).Replace("Track ", "L")</span>
                            }
                        </MudTd>
                    </RowTemplate>
                </MudTable>
            </div>
        }
        else
        {
            <div class="results-card" style="padding: 60px; text-align: center; margin-top: 30px;">
                <MudIcon Icon="@Icons.Material.Filled.HourglassEmpty" Style="font-size: 5rem; color: #cbd5e1;" />
                <h2 style="font-family:'Chakra Petch'; color: #64748b; margin-top: 15px;">START LIST COMING SOON</h2>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public string EventID { get; set; } = string.Empty;

    private EventInfo? _eventDetails;
    private List<RankingResult> _rankings = new();
    private SavedScoringData? _savedData;
    private bool _isLoading = true;
    private Timer? _refreshTimer;

    // --- ROW STYLING FUNCTION ---
    private string RowStyleFunc(RankingResult item, int index)
    {
        if (item.Result == "TBA") return ""; // Don't highlight if no result yet

        return item.Rank switch
        {
            1 => "row-gold",
            2 => "row-silver",
            3 => "row-bronze",
            _ => ""
        };
    }

    private string GetRankCellClass(int rank)
    {
        return rank switch
        {
            1 => "rank-cell gold",
            2 => "rank-cell silver",
            3 => "rank-cell bronze",
            _ => "rank-cell"
        };
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadEventDetails();

        if (_refreshTimer != null) _refreshTimer.Dispose();

        _refreshTimer = new Timer(async _ =>
        {
            if (_eventDetails?.EventStage?.ToLower() == "live" ||
                _eventDetails?.EventStage?.ToLower() == "in progress")
            {
                await InvokeAsync(async () =>
                {
                    await LoadEventDetails();
                    StateHasChanged();
                });
            }
        }, null, 3000, 3000); // Increased refresh to 3s to reduce jitter
    }

    private async Task LoadEventDetails()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            var allEvents = await apiService.GetAsync<EventInfo>("TimeDistanceEvents/Sports/AthleticsSwimming");

            if (allEvents != null && allEvents.Any())
            {
                var eventParticipants = allEvents.Where(p => p.ID == EventID).ToList();

                if (eventParticipants.Any())
                {
                    var first = eventParticipants.First();
                    _eventDetails = new EventInfo
                    {
                        ID = first.ID,
                        Sport = first.Sport,
                        Subcategory = first.Subcategory,
                        Gender = first.Gender,
                        Level = first.Level,
                        EventStage = first.EventStage,
                        SportMainCat = first.SportMainCat,
                        Region = first.Region,
                        Abbreviation = first.Abbreviation,
                        RegionID = first.RegionID,
                        PlayerID = first.PlayerID,
                        PlayerName = first.PlayerName
                    };

                    await LoadSavedScoringData();

                    if (_savedData != null)
                        _rankings = CalculateRankingsFromSavedData(_savedData, eventParticipants);

                    if (!_rankings.Any())
                        _rankings = CreateRankingsFromParticipants(eventParticipants);
                }
            }
        }
        catch (Exception ex) { Console.WriteLine($"Error: {ex.Message}"); }
        finally { _isLoading = false; StateHasChanged(); }
    }

    // --- REUSED LOGIC FROM YOUR PREVIOUS FILES ---
    private List<RankingResult> CreateRankingsFromParticipants(List<EventInfo> participants)
    {
        var rankings = new List<RankingResult>();
        int rank = 1;
        foreach (var participant in participants.Where(p => !string.IsNullOrEmpty(p.Abbreviation)))
        {
            rankings.Add(new RankingResult
            {
                RegionName = participant.Abbreviation,
                RegionLogo = participant.Region ?? participant.Abbreviation,
                PlayerName = participant.PlayerName ?? "TBA",
                Result = "TBA",
                AssignedLane = "TBA",
                Rank = rank++,
                NumericResult = 0
            });
        }
        return rankings;
    }

    private async Task LoadSavedScoringData()
    {
        try { _savedData = await apiService.GetSingleAsync<SavedScoringData>($"TimeDistanceEvents/Sports/AthleticsSwimming/{EventID}"); }
        catch { }
    }

    private List<RankingResult> CalculateRankingsFromSavedData(SavedScoringData savedData, List<EventInfo> participants)
    {
        var rankings = new List<RankingResult>();
        if (savedData.Heats == null) return rankings;

        var allResults = new List<RankingResult>();
        foreach (var heat in savedData.Heats)
        {
            if (heat.Lanes == null) continue;
            foreach (var lane in heat.Lanes)
            {
                if (!string.IsNullOrEmpty(lane.Result) && !string.IsNullOrEmpty(lane.RegionAbbreviation))
                {
                    if (TryParseResult(lane.Result, out double numericResult))
                    {
                        var pInfo = participants.FirstOrDefault(p => p.Abbreviation == lane.RegionAbbreviation || p.RegionID == lane.RegionID);
                        allResults.Add(new RankingResult
                        {
                            RegionName = lane.RegionAbbreviation,
                            RegionLogo = pInfo?.Region ?? lane.RegionAbbreviation,
                            PlayerName = lane.PlayerName,
                            Result = lane.Result,
                            AssignedLane = $"{heat.HeatName}-{lane.LaneName}",
                            NumericResult = numericResult
                        });
                    }
                }
            }
        }
        return allResults.OrderBy(r => r.NumericResult).Select((r, i) => { r.Rank = i + 1; return r; }).ToList();
    }

    private bool TryParseResult(string result, out double numericResult)
    {
        numericResult = 0;
        if (string.IsNullOrEmpty(result)) return false;
        if (double.TryParse(result, out double d)) { numericResult = d; return true; }
        if (TimeSpan.TryParse(result, out TimeSpan t)) { numericResult = t.TotalSeconds; return true; }
        return false;
    }

    private string GetRegionLogo(string? regionName)
    {
        if (string.IsNullOrWhiteSpace(regionName)) return "/images/region-placeholder.png";
        return $"https://palarongpambansa2026.com/attachments/media/regions/team_logo/{Uri.EscapeDataString(regionName.Trim())}.webp";
    }

    private string GetRegionInitials(string regionName)
    {
        if (string.IsNullOrWhiteSpace(regionName)) return "??";
        if (regionName.Length <= 6 && !regionName.Contains(" ")) return regionName.ToUpper();
        if (regionName.StartsWith("Region", StringComparison.OrdinalIgnoreCase))
        {
            var parts = regionName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
            if (parts.Length > 1) return parts[1];
        }
        return regionName.Substring(0, Math.Min(2, regionName.Length)).ToUpper();
    }

    private string GetTrackFromAssignedLane(string assignedLane)
    {
        if (string.IsNullOrEmpty(assignedLane)) return "-";
        var parts = assignedLane.Split('-');
        return GetTrackDisplayName(parts.Length > 1 ? parts[1] : assignedLane);
    }

    private string GetTrackDisplayName(string laneName)
    {
        var match = System.Text.RegularExpressions.Regex.Match(laneName ?? "", @"\d+");
        return match.Success ? $"Track {match.Value}" : (laneName ?? "-");
    }

    public void Dispose() => _refreshTimer?.Dispose();

    // Data Classes
    public class EventInfo { public string ID { get; set; } = ""; public string? Sport { get; set; } public string? Subcategory { get; set; } public string? Gender { get; set; } public string? Level { get; set; } public string? EventStage { get; set; } public string? SportMainCat { get; set; } public DateTime? Date { get; set; } public string? Time { get; set; } public string? Region { get; set; } public string? Abbreviation { get; set; } public int? RegionID { get; set; } public string? PlayerID { get; set; } public string? PlayerName { get; set; } }
    public class RankingResult { public string RegionName { get; set; } = ""; public string RegionLogo { get; set; } = ""; public string? PlayerName { get; set; } public string Result { get; set; } = ""; public string AssignedLane { get; set; } = ""; public int Rank { get; set; } public double NumericResult { get; set; } }
    public class SavedScoringData { public List<SavedHeat> Heats { get; set; } = new(); public List<SavedAssignment> Assignments { get; set; } = new(); }
    public class SavedHeat { public string HeatName { get; set; } = ""; public int HeatOrder { get; set; } public List<SavedLane> Lanes { get; set; } = new(); }
    public class SavedLane { public string LaneName { get; set; } = ""; public int LaneOrder { get; set; } public string? Result { get; set; } public int? RegionID { get; set; } public string? PlayerID { get; set; } public string? PlayerName { get; set; } public string? RegionAbbreviation { get; set; } }
    public class SavedAssignment { public int RegionID { get; set; } public string? PlayerID { get; set; } public string RegionAbbreviation { get; set; } = ""; public string AssignedTable { get; set; } = ""; }
}