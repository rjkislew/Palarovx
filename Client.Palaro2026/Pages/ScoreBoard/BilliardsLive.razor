@page "/scoreboard/billiards/{EventID}"
@using System.Threading
@using System.Linq
@using Client.Palaro2026.Services
@inject APIService apiService
@implements IDisposable
@layout NoMainLayout

<PageTitle>Billiards Live | PALARO 2026</PageTitle>

<style>
    /* --- FONTS & VARS --- */
    @@import url('https://fonts.cdnfonts.com/css/evil-empire');
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&family=Chakra+Petch:wght@600;700;800&display=swap');

    :root {
        --pal-blue: #023E8A;
        --pal-dark-blue: #001845;
        --pal-gold: #FFB400;
        --pal-red: #EA0000;
        --bg-gradient-start: #f8f9fa;
        --card-bg: rgba(255, 255, 255, 0.95);
        --font-header: 'Evil Empire', sans-serif;
        --font-score: 'Chakra Petch', sans-serif;
        --font-body: 'Nunito', sans-serif;
    }

    html, body {
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: var(--bg-gradient-start);
        font-family: var(--font-body);
    }

    .tv-container {
        height: 100vh;
        width: 100vw;
        background: radial-gradient(circle at 50% 30%, #ffffff 0%, #e0e7ff 100%);
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 3vh;
    }

    /* --- HEADER --- */
    .header-pill {
        background: var(--pal-dark-blue);
        border: 3px solid var(--pal-gold);
        padding: 1vh 4vw;
        border-radius: 50px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        margin-bottom: 2vh;
        z-index: 10;
        min-width: 40vw;
    }

    .event-title {
        font-family: var(--font-header);
        color: white;
        font-size: clamp(40px, 6vh, 80px);


        line-height: 1;
        letter-spacing: 2px;
        text-shadow: 2px 2px 0px rgba(0,0,0,0.2);
    }

    .event-sub {
        font-family: var(--font-score);
        color: var(--pal-gold);
        font-size: clamp(16px, 2.5vh, 30px);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* --- CONTENT AREA --- */
    .content-area {
        flex: 1;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 0 3vw;
        box-sizing: border-box;
    }

    .matches-grid {
        display: grid;
        width: 100%;
        grid-template-columns: repeat(2, 1fr);
        grid-auto-rows: minmax(20vh, auto);
        gap: 3vh 3vw;
        justify-content: center;
        animation: fadeIn 0.5s ease-in-out;
    }

    .grid-single {
        grid-template-columns: 1fr;
        max-width: 70vw;
        margin: auto;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* --- MATCH CARD --- */
    .billiards-card {
        background: var(--card-bg);
        border-radius: 20px;
        border: 1px solid #d1d9e6;
        border-top: 6px solid var(--pal-gold);
        border-bottom: 6px solid var(--pal-blue);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        padding: 1.5vh 1vw;
        height: 100%;
        min-height: 28vh;
    }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1vh;
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 0.5vh;
    }

    .table-badge {
        background: var(--pal-dark-blue);
        color: var(--pal-gold);
        padding: 0.5vh 1.5vw;
        border-radius: 8px;
        font-family: var(--font-score);
        font-weight: 800;
        font-size: clamp(14px, 2vh, 24px);
    }

    .status-badge {
        color: var(--pal-red);
        font-weight: 900;
        font-size: clamp(12px, 1.8vh, 20px);
        text-transform: uppercase;
        animation: blink 2s infinite;
    }

    @@keyframes blink {
        50% {
            opacity: 0.5;
        }
    }

    .players-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex: 1;
    }

    .player-side {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .p-img-box {
        width: clamp(60px, 10vh, 120px);
        height: clamp(60px, 10vh, 120px);
        background: white;
        border-radius: 50%;
        border: 4px solid #e0e0e0;
        padding: 5px;
        margin-bottom: 1vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .winner-glow {
        border-color: var(--pal-gold);
        box-shadow: 0 0 20px rgba(255, 180, 0, 0.5);
    }

    .p-name {
        font-family: var(--font-header);
        font-size: clamp(20px, 4vh, 45px);
        color: var(--pal-dark-blue);
        line-height: 1;
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .p-region {
        font-family: var(--font-body);
        font-size: clamp(12px, 2vh, 24px);
        color: var(--pal-blue);
        font-weight: 700;
    }

    .score-box {
        display: flex;
        align-items: center;
        gap: 1vw;
        padding: 0 1vw;
    }

    .score-val {
        font-family: var(--font-score);
        font-size: clamp(50px, 10vh, 110px);
        font-weight: 700;
        color: #37474f;
        line-height: 0.8;
    }

    .score-win {
        color: var(--pal-dark-blue);
        text-shadow: 3px 3px 0 rgba(255,180,0,0.3);
    }

    /* --- FOOTER --- */
    .ticker-footer {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 8vh;
        background: linear-gradient(to bottom, #ffffff, #f1f3f5);
        border-top: 4px solid var(--pal-gold);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
    }

    .ticker-track {
        display: flex;
        gap: 5vw;
        height: 100%;
        align-items: center;
    }

    .footer-logo {
        height: 5vh;
        width: auto;
    }

    /* DOTS */
    .page-indicator {
        position: absolute;
        bottom: 9vh;
        width: 100%;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #ccc;
    }

        .dot.active {
            background: var(--pal-blue);
            width: 25px;
            border-radius: 10px;
        }

</style>

<div class="tv-container">

    @if (_event != null)
    {
        <!-- HEADER -->
        <div class="header-pill">
            <div class="event-title">BILLIARDS</div>
            <div class="event-sub">@_event.Level • @_event.Gender @_event.Subcategory</div>
        </div>

        <div class="content-area">
            <!-- MATCHES VIEW -->
            @if (_currentBatch.Any())
            {
                <div class="matches-grid @(_currentBatch.Count == 1 ? "grid-single" : "")">
                    @foreach (var match in _currentBatch)
                    {
                        bool isFin = match.IsCompleted;
                        bool p1Win = match.Player1IsWinner == true;
                        bool p2Win = match.Player2IsWinner == true;

                        <div class="billiards-card">
                            <div class="card-top">
                                <div class="table-badge">TABLE @match.TableNo</div>
                                <!-- MODIFIED: ALWAYS SHOWS LIVE SCORE -->
                                <div class="status-badge">
                                    ● LIVE SCORE
                                </div>
                            </div>

                            <div class="players-row">
                                <!-- P1 -->
                                <div class="player-side">
                                    <div class="p-img-box @(p1Win ? "winner-glow" : "")">
                                        <MudImage Src="@GetRegionLogo(match.Player1Region)" ObjectFit="ObjectFit.Contain" Style="width:100%; height:100%;" />
                                    </div>
                                    <div class="p-name">@GetShortName(match.Player1Name, match.Player1Region)</div>
                                    <div class="p-region">@match.Player1Region</div>
                                </div>

                                <!-- SCORES -->
                                <div class="score-box">
                                    <div class="score-val @(p1Win ? "score-win" : "")">@match.Player1Score</div>
                                    <div style="font-size: 3vh; color:#ccc;">-</div>
                                    <div class="score-val @(p2Win ? "score-win" : "")">@match.Player2Score</div>
                                </div>

                                <!-- P2 -->
                                <div class="player-side">
                                    <div class="p-img-box @(p2Win ? "winner-glow" : "")">
                                        <MudImage Src="@GetRegionLogo(match.Player2Region)" ObjectFit="ObjectFit.Contain" Style="width:100%; height:100%;" />
                                    </div>
                                    <div class="p-name">@GetShortName(match.Player2Name, match.Player2Region)</div>
                                    <div class="p-region">@match.Player2Region</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <MudText Typo="Typo.h3" Align="Align.Center" Style="color:#999; font-family:var(--font-header);">WAITING FOR MATCHES...</MudText>
            }
        </div>

        <!-- PAGINATION DOTS (Only shows if there are more than 4 active tables) -->
        @if (_totalPages > 1)
        {
            <div class="page-indicator">
                @for (int i = 0; i < _totalPages; i++)
                {
                    <div class="dot @(i == _pageIndex ? "active" : "")"></div>
                }
            </div>
        }
    }
    else
    {
        <MudProgressCircular Indeterminate="true" Size="Size.Large" Color="Color.Primary" />
    }

    <!-- FOOTER -->
    <div class="ticker-footer">
        <div class="ticker-track">
            <img src="/media/images/2031.png" class="footer-logo" />
            <img src="/media/images/deped.png" class="footer-logo" />
            <img src="/media/images/bagongpilipinas.png" class="footer-logo" />
            <img src="/media/logo/Palarong Pambansa Logo.webp" onerror="this.src='/media/images/2031.png'" class="footer-logo" />
            <img src="/media/images/pgas.png" class="footer-logo" />
        </div>
    </div>
</div>

@code {
    [Parameter] public string EventID { get; set; } = "";

    // MODELS
    public class EventInfo { public string ID { get; set; } public string Subcategory { get; set; } public string Level { get; set; } public string Gender { get; set; } public string Sport { get; set; } }
    public class MatchInfo
    {
        public int TableNo { get; set; }
        public int SetNo { get; set; }
        public string Player1Name { get; set; }
        public string Player1Region { get; set; }
        public int Player1Score { get; set; }
        public bool? Player1IsWinner { get; set; }
        public string Player2Name { get; set; }
        public string Player2Region { get; set; }
        public int Player2Score { get; set; }
        public bool? Player2IsWinner { get; set; }
        public bool IsCompleted { get; set; }
    }
    public class SchoolRegions { public string Region { get; set; } public string Abbreviation { get; set; } }
    public class BilliardsResult { public int SetNo { get; set; } public int TableNo { get; set; } public string PlayerPosition { get; set; } public int? Score { get; set; } public bool? IsWinner { get; set; } public string Region { get; set; } public string Abbreviation { get; set; } public string PlayerName { get; set; } }

    private EventInfo? _event;
    private List<MatchInfo> _allMatches = new();
    private List<MatchInfo> _currentBatch = new();
    private List<SchoolRegions>? _regions;

    // ROTATION LOGIC (Carousel for matches only)
    private int _pageIndex = 0;
    private int _totalPages = 1;
    private int _itemsPerPage = 4; // Max tables per screen

    private Timer? _dataTimer;
    private Timer? _pageTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        _dataTimer = new Timer(async _ => await InvokeAsync(LoadData), null, 5000, 5000);
        _pageTimer = new Timer(async _ => await InvokeAsync(NextPage), null, 12000, 12000); // 12 seconds per slide
    }

    private void NextPage()
    {
        if (_totalPages <= 1) return;
        _pageIndex++;
        if (_pageIndex >= _totalPages) _pageIndex = 0;
        UpdateView();
        StateHasChanged();
    }

    private void UpdateView()
    {
        _currentBatch = _allMatches
            .Skip(_pageIndex * _itemsPerPage)
            .Take(_itemsPerPage)
            .ToList();
    }

    private async Task LoadData()
    {
        try
        {
            if (_regions == null) _regions = await apiService.GetAsync<SchoolRegions>("/Schools/Regions");
            var evts = await apiService.GetAsync<EventInfo>("/Events/Details");
            _event = evts?.FirstOrDefault(e => e.ID == EventID && e.Sport.Contains("Billiard"));

            if (_event != null)
            {
                var results = await apiService.GetAsync<BilliardsResult>($"/BilliardsScoring/event/{EventID}");
                if (results != null)
                {
                    var matchDict = new Dictionary<(int, int), MatchInfo>();

                    foreach (var r in results)
                    {
                        var key = (r.SetNo, r.TableNo);
                        if (!matchDict.ContainsKey(key)) matchDict[key] = new MatchInfo { SetNo = r.SetNo, TableNo = r.TableNo };
                        var m = matchDict[key];

                        string reg = r.Abbreviation ?? r.Region ?? "";
                        if (r.PlayerPosition == "Player1") { m.Player1Name = r.PlayerName; m.Player1Region = reg; m.Player1Score = r.Score ?? 0; m.Player1IsWinner = r.IsWinner; }
                        else { m.Player2Name = r.PlayerName; m.Player2Region = reg; m.Player2Score = r.Score ?? 0; m.Player2IsWinner = r.IsWinner; }
                        if (r.IsWinner.HasValue) m.IsCompleted = true;
                    }

                    // Logic: Show Matches from Latest Round
                    int maxSet = matchDict.Values.Any() ? matchDict.Values.Max(x => x.SetNo) : 0;

                    _allMatches = matchDict.Values
                        .Where(m => m.SetNo == maxSet)
                        .Where(m => !string.IsNullOrEmpty(m.Player1Region) && !string.IsNullOrEmpty(m.Player2Region))
                        .OrderBy(m => m.TableNo)
                        .ToList();

                    // Calculate Pages (Just matches, no winners)
                    _totalPages = (int)Math.Ceiling((double)_allMatches.Count / _itemsPerPage);
                    if (_totalPages == 0) _totalPages = 1;
                    if (_pageIndex >= _totalPages) _pageIndex = 0;

                    UpdateView();
                    StateHasChanged();
                }
            }
        }
        catch { }
    }

    public void Dispose() { _dataTimer?.Dispose(); _pageTimer?.Dispose(); }
    private string GetRegionLogo(string reg)
    {
        var r = _regions?.FirstOrDefault(x => x.Abbreviation == reg || x.Region == reg);
        string name = r?.Region ?? reg ?? "";
        return $"https://palarongpambansa2026.com/attachments/media/regions/team_logo/{Uri.EscapeDataString(name)}.webp";
    }
    private string GetShortName(string name, string reg) => string.IsNullOrEmpty(name) ? (reg ?? "PLAYER") : name;
}