@page "/policies"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-3">
    <MudGrid Spacing="10">
        <MudItem xs="12">
            <MudStack>
                <MudText Typo="Typo.h5">
                    📜 Policies & Terms
                </MudText>
                <MudText Typo="Typo.caption">
                    The following policies govern your use of the Palaro tu AgSur 2026 official website. Please review them carefully.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudBreadcrumbs Style="font-size: 15px" Class="pa-0" Items="_items"></MudBreadcrumbs>
            <MudDivider />
        </MudItem>

        <!-- 1. Privacy Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/privacy-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🔒 Privacy Policy</MudText>
                        <MudText Typo="Typo.caption">
                            We collect and store personal information such as names, teams, and region data for public visibility. Cookies may be used for session management. Data is secured and disclosed only for purposes of transparency and competition integrity.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 2. Terms and Conditions -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/terms-and-conditions">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">📜 Terms and Conditions</MudText>
                        <MudText Typo="Typo.caption">
                            By using this website, you agree to comply with our usage rules. We reserve the right to update content and policies without notice. Misuse may result in restricted access.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 3. Data Protection Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/data-protection-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🛡️ Data Protection Policy</MudText>
                        <MudText Typo="Typo.caption">
                            All data, including login credentials, are stored securely using hashing and encryption. Access is restricted based on roles. We comply with the Data Privacy Act of 2012 (RA 10173).
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 4. Content Publishing Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/content-publishing-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🖋️ Content Publishing Policy</MudText>
                        <MudText Typo="Typo.caption">
                            Only authorized users may upload content (news, scores, images). Offensive, political, or irrelevant material will be removed. Uploaded content must respect participant dignity.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 5. Code of Conduct -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/code-of-conduct">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🤝 Code of Conduct (Acceptable Use)</MudText>
                        <MudText Typo="Typo.caption">
                            Users must act respectfully. Hate speech, impersonation, and system tampering are strictly prohibited. Violators may be reported and blocked.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 6. Media Usage Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/media-usage-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">📷 Media Usage Policy</MudText>
                        <MudText Typo="Typo.caption">
                            Official photos and videos are the property of the Palaro tu AgSur 2026 Committee. Usage or reproduction must credit the source and comply with consent rules for minors.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 7. Disclaimer Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/disclaimer-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">⚠️ Disclaimer Policy</MudText>
                        <MudText Typo="Typo.caption">
                            Information provided is subject to change. The website is not liable for downtimes, content errors, or schedule changes. Always refer to the latest announcements.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 8. Accessibility Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/accessibility-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">♿ Accessibility Policy</MudText>
                        <MudText Typo="Typo.caption">
                            We are committed to web accessibility for all users. This includes screen reader support, keyboard navigation, and optimized mobile layouts. If you face difficulty, please contact us.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 9. Cookie Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/cookie-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🍪 Cookie Policy</MudText>
                        <MudText Typo="Typo.caption">
                            We use cookies to enhance your browsing experience and manage sessions. By using this site, you consent to the use of cookies. See the <b><MudElement HtmlTag="a" href="/policies/cookie-policy">Cookie Policy</MudElement></b> page for details.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 10. Security Notice -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/security-notice">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🔐 Security Notice</MudText>
                        <MudText Typo="Typo.caption">
                            The site employs SSL encryption, hashed passwords (SHA256), and activity logs. If you notice suspicious behavior, report it to <b><MudElement HtmlTag="a" href="mailto:mail@pgas.ph">mail@pgas.ph</MudElement></b> immediately.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>

        <!-- 11. API Use Policy -->
        <MudItem xs="12" md="6">
            <MudLink Underline="Underline.None" Href="./policies/api-use-policy">
                <MudPaper Outlined Class="pa-3" Style="height: 100%">
                    <MudStack>
                        <MudText Typo="Typo.h6">🔗 API Use Policy</MudText>
                        <MudText Typo="Typo.caption">
                            API access may be granted to verified systems (e.g., media, schools) upon request. Misuse or overload may result in revoked access. Documented endpoints are subject to change.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudLink>
        </MudItem>
    </MudGrid>
</MudContainer>

<FooterComponent />

