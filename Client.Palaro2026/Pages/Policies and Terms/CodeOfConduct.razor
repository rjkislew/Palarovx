@page "/policies/code-of-conduct"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-3">
    <MudGrid Spacing="10">
        <MudItem xs="12">
            <MudStack>
                <MudText Typo="Typo.h5">
                    🤝 Code of Conduct
                </MudText>
                <MudText Typo="Typo.caption">
                    This Code of Conduct outlines acceptable use of the PALARO 2026 website and the expected behavior of all users. By using our site and services, you agree to uphold the following standards.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudBreadcrumbs Style="font-size: 15px" Class="pa-0" Items="_items"></MudBreadcrumbs>
            <MudDivider />
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>1. Respectful Communication</MudText>
                <MudText Typo="Typo.caption">
                    Users must communicate respectfully and refrain from any form of harassment, hate speech, discrimination, or abusive language.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>2. Lawful Use</MudText>
                <MudText Typo="Typo.caption">
                    The PALARO 2026 website must not be used for any unlawful purpose, including but not limited to fraud, identity theft, or unauthorized access to other systems.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>3. Protection of Personal Data</MudText>
                <MudText Typo="Typo.caption">
                    Users must not attempt to access, misuse, or distribute personal data or confidential information unless explicitly authorized.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>4. Intellectual Property</MudText>
                <MudText Typo="Typo.caption">
                    All content on this site is protected by intellectual property rights. Do not copy, reproduce, or distribute materials without proper attribution or permission.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>5. No Spam or Malware</MudText>
                <MudText Typo="Typo.caption">
                    Users must not upload or transmit spam, malicious software, or any content that may harm the website or its users.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>6. Reporting Violations</MudText>
                <MudText Typo="Typo.caption">
                    If you witness a violation of this Code of Conduct, please report it to the site administrators at
                    <MudElement HtmlTag="a" href="mailto:mail@pgas.ph">mail@pgas.ph</MudElement>.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>7. Enforcement</MudText>
                <MudText Typo="Typo.caption">
                    We reserve the right to restrict or terminate access to the website for users who violate these terms, with or without notice.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>8. Updates</MudText>
                <MudText Typo="Typo.caption">
                    This Code of Conduct may be updated as necessary. Continued use of the site after changes are posted constitutes acceptance of the updated policy.
                </MudText>
            </MudStack>
        </MudItem>

        <MudItem xs="12">
            <MudStack>
                <MudText>📩 Contact</MudText>
                <MudText Typo="Typo.caption">
                    For any questions regarding this policy, contact us at <MudElement HtmlTag="a" href="mailto:mail@pgas.ph">mail@pgas.ph</MudElement>.
                </MudText>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

<FooterComponent />

@code
{
    private List<BreadcrumbItem> _items = new();

    protected override void OnInitialized()
    {
        _items = new List<BreadcrumbItem>
        {
            new("Home", href: "./"),
            new("Policies", href: "./policies"),
            new("Code of Conduct", href: null, disabled: true)
        };
    }
}
