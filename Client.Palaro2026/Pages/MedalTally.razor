@page "/medal-tally"
<MudGrid>
    <MudItem xs="12">
        <MudStack Style="
            position: relative;
            overflow: hidden;
            height: calc(50vh - 64px);;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-image: url('Media/Images/Grand_Stand.jpg');">
            <MudStack Style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.75);
                z-index: 1;">
            </MudStack>
            <MudStack Style="height: 100%" AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="0">
                <MudText Align="Align.Center" Typo="Typo.h1" Color="Color.Secondary" Style="z-index: 2"><b>Medal Tally</b></MudText>
            </MudStack>
        </MudStack>
    </MudItem>
    <MudItem xs="12">
        <MudContainer MaxWidth="MaxWidth.Small">
            <MedalTallyComponent/>
        </MudContainer>
    </MudItem>
</MudGrid>
<UnderConstruction/>
<FooterComponent />
