                                </MudTh>
                                <MudTh Style="text-align: center; text-indent: 12px">
                                    <MudTableSortLabel SortBy="new Func<MedalTallyDTO.SchoolLevelMedalTally.RegionalMedalTally, object>(x => x.Silver!)">
                                        Silver
                                    </MudTableSortLabel>
                                </MudTh>
