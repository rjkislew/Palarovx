                                </MudTh>
                                <MudTh>
                                    <MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="new Func<MedalTallyDTO.SchoolLevelMedalTally.RegionalMedalTally, object>(x => x.Gold!)">
                                        Gold
