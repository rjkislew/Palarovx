<MudDialog>
    <DialogContent>
        <MudTabs>
            <MudTabPanel Text="Login">
                <MudField Label="Username" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
                <MudField Label="Password" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
            </MudTabPanel>
            <MudTabPanel Text="Register">
                <MudField Label="Email" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
                <MudField Label="Username" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
                <MudField Label="Password" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
                <MudField Label="Password" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
            </MudTabPanel>
        </MudTabs>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}
