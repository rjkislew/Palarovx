@using System.Net.Http
@using System.Text
@using System.Text.Json
@using System.Threading.Tasks
@using Client.Palaro2026.Services
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudStack>
            <MudText>The information and records currently displayed are sample data only.</MudText>
            <MudText Typo="Typo.caption">These are for demonstration and testing purposes and do not represent actual or official records.</MudText>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudStack Row Style="width: 100%" Justify="Justify.Center">
            <MudButton Style="text-transform: none" DropShadow="false" Size="Size.Large" OnClick="Confirm" FullWidth>Confirm</MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>

@code {
    // Requirement for Dialog to work
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    private void Confirm() => MudDialog?.Cancel();
}
