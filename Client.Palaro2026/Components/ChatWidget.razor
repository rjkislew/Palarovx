                <div class="d-flex justify-center align-center rounded-circle mb-3"
                     style="width: 72px; height: 72px; background: white; box-shadow: 0 4px 20px rgba(0,0,0,0.06);">
                    <MudIcon Icon="@Icons.Material.TwoTone.SportsKabaddi" Color="Color.Primary" Size="Size.Large" />
                </div>
                
                <MudText Typo="Typo.h6" Class="fw-bold" Style="color: var(--mud-palette-text-primary);">Hello, Mabuhay! 👋</MudText>
                <MudText Typo="Typo.body2" Class="text-center px-4 mb-6" Style="color: var(--mud-palette-text-secondary); font-size: 0.9rem;">
                    Ask me about game venues, schedules, or specific sports events.
                </MudText>

                <!-- SUGGESTED TOPICS GRID -->
                <div class="w-100 px-2">
      <MudText Typo="Typo.overline" Class="ml-1 mb-2 d-block fw-bold" Color="Color.Secondary">💡 QUICK QUESTIONS</MudText>
            <div class="topic-grid mb-4">
             <div class="topic-card" @onclick="@(() => SetInputAndSend("What sports are available?"))">
    <MudIcon Icon="@Icons.Material.Filled.SportsBasketball" />
      <span class="topic-title">Sports</span>
        </div>
          <div class="topic-card" @onclick="@(() => SetInputAndSend("Where are the venues?"))">
  <MudIcon Icon="@Icons.Material.Filled.LocationOn" />
    <span class="topic-title">Venues</span>
   </div>
             </div>
     </div>
    </MudStack>
        }
        else
        {
            <MudStack Spacing="3">
                @foreach (var message in _messages)
                {
                    <div class="d-flex w-100 @(message.IsUser ? "justify-end" : "justify-start")" style="animation: fadeUp 0.3s ease forwards;">
                        @if (!message.IsUser)
                        {
                            <MudAvatar Size="Size.Small" Color="Color.Surface" Class="mr-2 mt-auto mb-1 mud-elevation-1">
                                <MudIcon Icon="@Icons.Material.Filled.SupportAgent" Size="Size.Small" Color="Color.Primary" />
                            </MudAvatar>
                        }

                        <div class="d-flex flex-column" style="max-width: 85%;">
                            <div class="pa-3 px-4 @(message.IsUser ? "bubble-user" : "bubble-ai")">
                                <MudText Typo="Typo.body2" Style="line-height: 1.5; font-size: 0.95rem;">
                                    @((MarkupString)GetFormattedMessage(message.Content))
                                </MudText>
                            </div>
                            <MudText Typo="Typo.caption" Class="mt-1 px-1" Style="@GetTimestampStyle(message.IsUser)">
                                @message.Timestamp.ToString("h:mm tt")
                            </MudText>
                        </div>
                    </div>
                }

                @if (_isSending)
                {
                    <div class="d-flex w-100 justify-start">
                        <MudAvatar Size="Size.Small" Color="Color.Surface" Class="mr-2 mt-auto mb-1">
                            <MudIcon Icon="@Icons.Material.Filled.SupportAgent" Size="Size.Small" Color="Color.Primary" />
                        </MudAvatar>
                        <div class="bubble-ai pa-3 px-4 d-flex align-center gap-1">
                            <div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div>
                        </div>
                    </div>
                }
            </MudStack>
        }
    </div>

    <!-- FLOATING INPUT -->
    <div class="floating-input-container">
        <input @bind="_messageInput"
               @bind:event="oninput"
               @onkeydown="HandleKeyDown"
               placeholder="Ask about games, results..."
               disabled="@_isSending"
               style="border: none; outline: none; background: transparent; flex-grow: 1; font-size: 0.95rem; color: var(--mud-palette-text-primary);" />
        
        <MudIconButton Icon="@Icons.Material.Rounded.Send" 
                       Color="Color.Primary" 
                       Size="Size.Medium"
                       Disabled="@(string.IsNullOrWhiteSpace(_messageInput) || _isSending)"
                       OnClick="SendMessage"
                       Class="ml-1" />
    </div>

</MudPaper>

<!-- FAB TRIGGER -->
<div style="position: fixed; bottom: 25px; right: 25px; z-index: 1999;">
    <MudTooltip Text="@(_isOpen ? "Close" : "Ask Palaro AI")" Placement="Placement.Left">
        <MudFab Color="Color.Primary" 
         OnClick="ToggleChat"
              StartIcon="@(_isOpen ? Icons.Material.Rounded.KeyboardArrowDown : Icons.Material.Filled.ChatBubble)" 
             Size="Size.Large"
   Class="mud-elevation-12"
       Style="transition: transform 0.2s;" />
    </MudTooltip>
</div>

@code {
    private List<ChatMessage> _messages = new();
    private string _messageInput = string.Empty;
    private bool _isOpen;
    private bool _isSending;
    private ElementReference _messagesContainer;

    protected override async Task OnInitializedAsync()
    {
        ChatService.OnMessagesChanged += OnMessagesChanged;
        _messages = await ChatService.GetMessagesAsync();
    }

    private void OnMessagesChanged()
    {
     // Fire async operation without waiting (event handler pattern)
        _ = OnMessagesChangedAsync();
    }

    private async Task OnMessagesChangedAsync()
    {
        // Only update if the component is still active
        var newMessages = await ChatService.GetMessagesAsync();
        
        // Only re-render if messages actually changed
  if (_messages.Count != newMessages.Count)
      {
            _messages = newMessages;
  await InvokeAsync(StateHasChanged);
            await ScrollToBottom();
  }
    }

    private async Task SetInputAndSend(string text)
    {
        _messageInput = text;
        await SendMessage();
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_messageInput)) return;

        _isSending = true;
        var message = _messageInput;
        _messageInput = string.Empty;

        StateHasChanged();
        await ChatService.SendMessageAsync(message);
        
        // Wait a moment for the service to update
        await Task.Delay(100);
        
        // Get fresh messages from service
    _messages = await ChatService.GetMessagesAsync();
        _isSending = false;
        
      await InvokeAsync(StateHasChanged);
    await ScrollToBottom();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !_isSending)
        {
            await SendMessage();
        }
    }

    private async Task ToggleChat() 
    {
        _isOpen = !_isOpen;
        if(_isOpen)
        {
            await Task.Delay(100);
            await ScrollToBottom();
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JS.InvokeVoidAsync("eval", "var el = document.querySelector('.chat-scroll-container'); if(el) el.scrollTop = el.scrollHeight;");
        }
        catch { }
    }

    private string GetFormattedMessage(string content)
    {
        if (string.IsNullOrWhiteSpace(content)) return string.Empty;
        
      // JSON Cleaner - extract the actual message content
        if (content.TrimStart().StartsWith("{")) {
   try { 
                using var doc = JsonDocument.Parse(content); 
                if (doc.RootElement.TryGetProperty("output", out var o)) {
        content = o.GetString() ?? content;
     }
   } 
          catch { }
  }

        // Remove any HTML tags that might be in the content (they cause rendering issues)
        content = Regex.Replace(content, @"<[^>]+>", "");
        
        // Format bold text
        content = Regex.Replace(content, @"\*\*(.*?)\*\*", "<b>$1</b>");
        
        // Format URLs
     content = Regex.Replace(content, 
      @"((http|https):\/\/[\w\-_]+(\.[\w\-_]+)+([\w\-\.,@?^=%&amp;:/~\+#]*[\w\-\@?^=%&amp;/~\+#])?)", 
"<a href='$1' target='_blank' style='color: var(--mud-palette-primary); text-decoration: underline;'>$1</a>");
        
 // Line breaks - convert markdown line breaks to HTML
        content = content.Replace("\n", "<br>");
        
    return content;
    }

    private string GetTimestampStyle(bool isUser)
    {
        var alignment = isUser ? "end" : "start";
        return $"font-size: 0.7rem; opacity: 0.6; align-self: {alignment};";
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        ChatService.OnMessagesChanged -= OnMessagesChanged;
    }
}