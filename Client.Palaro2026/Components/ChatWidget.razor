@using Client.Palaro2026.Services
@using System.Text.Json
@using System.Text.RegularExpressions
@inject IChatService ChatService
@inject IJSRuntime JS
@implements IAsyncDisposable

<style>
    :root {
        --chat-primary: var(--mud-palette-primary);
        --chat-primary-rgb: var(--mud-palette-primary-rgb);
        --chat-secondary: var(--mud-palette-secondary);
        --chat-bg: #f8fafc;
        --chat-surface: #ffffff;
    }

    /* --- Main Window Animation --- */
    .chat-window {
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
        transform-origin: bottom right;
        opacity: 0;
        transform: scale(0.9) translateY(20px);
        visibility: hidden;
        pointer-events: none;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255,255,255,0.6);
        box-shadow: 0 10px 30px -10px rgba(0,0,0,0.1);
    }

    .chat-window.open {
        opacity: 1;
        transform: scale(1) translateY(0);
        visibility: visible;
        pointer-events: auto;
        box-shadow: 0 20px 60px -10px rgba(0, 0, 0, 0.2);
    }

    /* --- Background Pattern (Premium Look) --- */
    .chat-background-pattern {
        background-color: var(--chat-bg);
        background-image: radial-gradient(rgba(var(--chat-primary-rgb), 0.08) 1px, transparent 1px);
        background-size: 20px 20px;
    }

    /* --- Scrollbar Styling --- */
    .chat-scroll-container::-webkit-scrollbar { width: 5px; }
    .chat-scroll-container::-webkit-scrollbar-track { background: transparent; }
    .chat-scroll-container::-webkit-scrollbar-thumb {
        background-color: rgba(0,0,0,0.1);
        border-radius: 10px;
    }
    .chat-scroll-container:hover::-webkit-scrollbar-thumb { background-color: rgba(0,0,0,0.2); }

    /* --- Message Bubbles --- */
    .bubble-user {
        background: linear-gradient(135deg, var(--chat-primary) 0%, var(--chat-secondary) 100%);
        color: white;
        border-radius: 18px 18px 2px 18px;
        box-shadow: 0 4px 12px rgba(var(--chat-primary-rgb), 0.25);
    }

    .bubble-ai {
        background: var(--chat-surface);
        color: var(--mud-palette-text-primary);
        border-radius: 18px 18px 18px 2px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        border: 1px solid rgba(0,0,0,0.04);
    }

    /* --- Suggested Topic Cards --- */
    .topic-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        width: 100%;
    }

    .topic-card {
        background: white;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 12px;
        padding: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 6px;
    }

    .topic-card:hover {
        transform: translateY(-2px);
        border-color: var(--chat-primary);
        box-shadow: 0 4px 12px rgba(var(--chat-primary-rgb), 0.15);
    }

    .topic-card i { font-size: 1.5rem; color: var(--chat-primary); margin-bottom: 4px; }
    .topic-title { font-weight: 600; font-size: 0.85rem; color: var(--mud-palette-text-primary); }
    .topic-sub { font-size: 0.7rem; color: var(--mud-palette-text-secondary); }

    /* --- Floating Input --- */
    .floating-input-container {
        position: absolute;
        bottom: 16px;
        left: 16px;
        right: 16px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 30px;
        padding: 4px 6px 4px 16px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
        z-index: 10;
    }

    /* --- Typing Indicator --- */
    .typing-dot {
        width: 6px;
        height: 6px;
        background-color: var(--mud-palette-text-secondary);
        border-radius: 50%;
        animation: typingBounce 1.4s infinite ease-in-out both;
    }
    .typing-dot:nth-child(1) { animation-delay: -0.32s; }
    .typing-dot:nth-child(2) { animation-delay: -0.16s; }
    @@keyframes typingBounce { 0%, 80%, 100% { transform: scale(0); } 40% { transform: scale(1); } }

    /* --- Mobile --- */
    @@media (max-width: 600px) {
        .chat-window {
            bottom: 0 !important; right: 0 !important;
            width: 100% !important; height: 100% !important;
            max-height: 100vh !important; border-radius: 0 !important;
        }
    }
</style>

<!-- CHAT WINDOW -->
