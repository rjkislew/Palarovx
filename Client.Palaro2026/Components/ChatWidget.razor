        </MudAvatar>

        <MudStack Spacing="0" Class="flex-grow-1" Style="z-index: 1;">
            <MudText Typo="Typo.subtitle2" Class="fw-bold" Style="font-size: 1rem; letter-spacing: 0.5px;">Palaro 2026 AI</MudText>
            <MudText Typo="Typo.caption" Style="opacity: 0.9; font-size: 0.75rem;">Your Sports Companion</MudText>
        </MudStack>

        <MudIconButton Icon="@Icons.Material.Rounded.Close" Color="Color.Inherit" Size="Size.Small" OnClick="ToggleChat" />
    </div>

    <!-- MESSAGES AREA - SCROLLABLE -->
