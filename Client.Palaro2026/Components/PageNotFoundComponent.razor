<MudContainer MaxWidth="MaxWidth.Large">
    <MudStack Style="width: 100%; height: calc(100vh - 200px);" AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="3">

        <MudImage Src="media/logo/logo with 2026.webp" Height="200" Width="200" />
        <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.ErrorOutline" Color="Color.Error" />
            <MudText Typo="Typo.h2" Color="Color.Error" Class="font-weight-bold">
                404 - Page Not Found
            </MudText>
        </MudStack>

        <MudText Typo="Typo.subtitle1" Align="Align.Center">
            The page you're looking for doesn't exist or has been moved.
        </MudText>

        <MudButton Class="mt-3" Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Home" Href="./">
            Go to Home
        </MudButton>
    </MudStack>
</MudContainer>