@inject ColorService ColorSettings

<MudGrid Class="pt-20">
    <MudItem xs="12" >
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudStack Class="py-20" Spacing="10">
                <MudStack Row>
                    <MudText >Follow us on </MudText>
                    <MudIcon Style="@($"color:{ColorSettings.SelectedColor}")" Icon="@Icons.Custom.Brands.Facebook"/>
                    <MudIcon Style="@($"color:{ColorSettings.SelectedColor}")" Icon="@Icons.Custom.Brands.Instagram"/>
                    <MudIcon Style="@($"color:{ColorSettings.SelectedColor}")" Icon="@Icons.Custom.Brands.X"/>
                    <MudIcon Style="@($"color:{ColorSettings.SelectedColor}")" Icon="@Icons.Custom.Brands.YouTube"/>
                    <MudIcon Style="@($"color:{ColorSettings.SelectedColor}")" Icon="@Icons.Custom.Brands.TikTok"/>
                </MudStack>
                <MudDivider />
                <MudStack Class="flex-md-row">
                    <MudStack Class="flex-md-row" Spacing="5">
                        <MudText>Cookie Policy</MudText>
                        <MudText>Privacy Policy</MudText>
                        <MudText>Terms of Service</MudText>
                    </MudStack>
                    <MudHidden Breakpoint="Breakpoint.MdAndUp">
                        <MudDivider />
                    </MudHidden>
                    <MudSpacer />
                    <MudStack>
                        <MudText>Copyright 2024. All rights reserved</MudText>
                        <MudText Typo="Typo.caption">
                            Developed by the 
                            <MudElement HtmlTag="a" Style="@($"color:{ColorSettings.SelectedColor}")" href="https://agusandelsur.gov.ph/" target="_blank">Provincial Government of Agusan del Sur</MudElement>
                            <br/>
                            under the leadership of
                            <MudElement HtmlTag="a" Style="@($"color:{ColorSettings.SelectedColor}")" href="https://agusandelsur.gov.ph/the-province-of-agusan-del-sur/government-officials/governor/" target="_blank">Gov. Santiago B. Cane, Jr.</MudElement>
                        </MudText>
                    </MudStack>
                </MudStack>
            </MudStack>
        </MudContainer>
    </MudItem>
</MudGrid>

@code {
    protected override void OnInitialized()
    {
        ColorSettings.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        ColorSettings.OnChange -= StateHasChanged;
    }
}
