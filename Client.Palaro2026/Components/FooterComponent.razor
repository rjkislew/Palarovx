<MudGrid Class="pt-20">
    <MudItem xs="12" >
        <MudContainer MaxWidth="MaxWidth.False">
            <MudStack Class="py-20" Spacing="10">
                <MudStack Row>
                    <MudText Color="Color.Tertiary">Follow us on </MudText>
                    <MudIcon Icon="@Icons.Custom.Brands.Facebook" Color="Color.Tertiary" />
                    <MudIcon Icon="@Icons.Custom.Brands.Instagram" Color="Color.Tertiary" />
                    <MudIcon Icon="@Icons.Custom.Brands.X" Color="Color.Tertiary" />
                    <MudIcon Icon="@Icons.Custom.Brands.YouTube" Color="Color.Tertiary" />
                    <MudIcon Icon="@Icons.Custom.Brands.TikTok" Color="Color.Tertiary" />
                </MudStack>
                <MudDivider />
                <MudStack Class="flex-md-row">
                    <MudStack Class="flex-md-row" Spacing="5">
                        <MudText Color="Color.Tertiary">Cookie Policy</MudText>
                        <MudText Color="Color.Tertiary">Privacy Policy</MudText>
                        <MudText Color="Color.Tertiary">Terms of Service</MudText>
                    </MudStack>
                    <MudHidden Breakpoint="Breakpoint.MdAndUp">
                        <MudDivider />
                    </MudHidden>
                    <MudSpacer />
                    <MudStack>
                        <MudText Color="Color.Tertiary">Copyright 2024. All rights reserved</MudText>
                        <MudText Typo="Typo.caption">
                            Developed by the 
                            <MudElement HtmlTag="a" Style="@($"color:{Colors.Orange.Accent4}")" href="https://agusandelsur.gov.ph/" target="_blank">Provincial Government of Agusan del Sur</MudElement>
                            <br/>
                            under the leadership of
                            <MudElement HtmlTag="a" Style="@($"color:{Colors.Orange.Accent4}")" href="https://agusandelsur.gov.ph/" target="_blank">Gov. Santiago B. Cane, Jr.</MudElement>
                        </MudText>
                    </MudStack>
                </MudStack>
            </MudStack>
        </MudContainer>
    </MudItem>
</MudGrid>

