            <MudStack Row AlignItems="AlignItems.Center" Style="height: 100%; width: 100%">
                @* <MudText Typo="Typo.caption">Follow us: </MudText>
                <MudIcon href="https://www.facebook.com/profile.php?id=61586326311296" Size="Size.Small" Color="Color.Primary" Icon="@Icons.Custom.Brands.Facebook" />
