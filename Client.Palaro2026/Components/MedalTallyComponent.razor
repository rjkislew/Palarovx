<MudStack Spacing="3" Class="pb-10">
    <MudPaper Class="pa-2" Elevation="0">
        <MudStack Row AlignItems="AlignItems.End">
            <MudText Style="font-family: 'New Amsterdam';font-size: 30px">Region</MudText>
            <MudSpacer />
            <MudStack Row Spacing="0" AlignItems="AlignItems.Center" Class="pr-6">
                <MudStack Row Wrap="Wrap.Wrap" Style="width: 50px" Spacing="0" Justify="Justify.Center">
                    <MudAvatar Size="Size.Medium" Style="background-color: #FCC861; color: white">G</MudAvatar>
                </MudStack>
                <MudStack Row Wrap="Wrap.Wrap" Style="width: 50px" Spacing="0" Justify="Justify.Center">
                    <MudAvatar Size="Size.Medium" Style="background-color: #E5E5E5; color: white">S</MudAvatar>
                </MudStack>
                <MudStack Row Wrap="Wrap.Wrap" Style="width: 50px" Spacing="0" Justify="Justify.Center">
                    <MudAvatar Size="Size.Medium" Style="background-color: #DCB386; color: white">B</MudAvatar>
                </MudStack>
                <MudStack Row Wrap="Wrap.Wrap" Style="width: 50px" Spacing="0" Justify="Justify.Center" Class="flex-wrap-reverse">
                    <MudAvatar Size="Size.Small" Style="background-color: #E5E5E5; color: white; font-size: 5px"></MudAvatar>
                    <MudAvatar Size="Size.Small" Style="background-color: #DCB386; color: white; font-size: 5px"></MudAvatar>
                    <MudAvatar Size="Size.Small" Style="background-color: #FCC861; color: white; font-size: 5px"></MudAvatar>
                </MudStack>
            </MudStack>
        </MudStack>
    </MudPaper>
    <MudDivider />
    <MudStack Spacing="2">
        <MudVirtualize Items="regionMedalsList" Context="regionMedal">
            <style>
                .my-panels .mud-expand-panel-header {
                    padding: 8px;
                }
            </style>
            <MudExpansionPanel Class="my-panels rounded">
                <TitleContent>
                    <MudStack Row AlignItems="AlignItems.Start">
                        <MudHidden Breakpoint="Breakpoint.MdAndUp">
                            <MudText Typo="Typo.body2">@regionMedal.Abbrev</MudText>
                        </MudHidden>
                        <MudHidden Breakpoint="Breakpoint.Xs">
                            <MudText Typo="Typo.body2">@regionMedal.Region (@regionMedal.Abbrev)</MudText>
                        </MudHidden>
                        <MudSpacer />
                        <MudStack Row Spacing="0" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.body2" Style="width: 50px" Align="Align.Center"><b>@regionMedal.Gold</b></MudText>
                            <MudText Typo="Typo.body2" Style="width: 50px" Align="Align.Center">@regionMedal.Silver</MudText>
                            <MudText Typo="Typo.body2" Style="width: 50px" Align="Align.Center">@regionMedal.Bronze</MudText>
                            <MudText Typo="Typo.body2" Style="width: 50px" Align="Align.Center">@regionMedal.Total</MudText>
                        </MudStack>
                    </MudStack>
                </TitleContent>
                <ChildContent>
                    <MudStack>
                        <MudDivider />
                        <MudStack Spacing="1">
                            <MudText Class="pb-3" Typo="Typo.body2">Elementary Level</MudText>
                            <MudStack Row>
                                <MudStack Row Spacing="1" AlignItems="AlignItems.Center">
                                    <MudAvatar Size="Size.Small" Style="background-color: #FCC861; color: white">G</MudAvatar>
                                    <MudText>Gold: </MudText>
                                    <MudStack Row Spacing="0" Wrap="Wrap.Wrap">
                                        <MudChip Size="Size.Small" T="string">Sport Event 1</MudChip>
                                        <MudChip Size="Size.Small" T="string">Sport Event 2</MudChip>
                                        <MudChip Size="Size.Small" T="string">Sport Event 3</MudChip>
                                        <MudChip Size="Size.Small" T="string">Sport Event 4</MudChip>
                                    </MudStack>
                                </MudStack>
                            </MudStack>
                            <MudStack Row>
                                <MudStack Row Spacing="1" AlignItems="AlignItems.Center">
                                    <MudAvatar Size="Size.Small" Style="background-color: #E5E5E5; color: white">S</MudAvatar>
                                    <MudText>Silver: </MudText>
                                    <MudStack Row Spacing="0" Wrap="Wrap.Wrap">
                                        <MudChip Size="Size.Small" T="string">Sport Event 5</MudChip>
                                        <MudChip Size="Size.Small" T="string">Sport Event 6</MudChip>
                                        <MudChip Size="Size.Small" T="string">Sport Event 7</MudChip>
                                    </MudStack>
                                </MudStack>
                            </MudStack>
                            <MudStack Row>
                                <MudStack Row Spacing="1" AlignItems="AlignItems.Center">
                                    <MudAvatar Size="Size.Small" Style="background-color: #DCB386; color: white">B</MudAvatar>
                                    <MudText>Bronze: </MudText>
                                    <MudStack Row Spacing="0" Wrap="Wrap.Wrap">
                                        <MudChip Size="Size.Small" T="string">Sport Event 8</MudChip>
                                        <MudChip Size="Size.Small" T="string">Sport Event 9</MudChip>
                                    </MudStack>
                                </MudStack>
                            </MudStack>
                        </MudStack>
                        <MudDivider />
                        <MudStack Spacing="1">
                            <MudText Class="pb-3" Typo="Typo.body2">Secondary Level</MudText>
                            <MudStack Row>
                                <MudStack Row Spacing="1" AlignItems="AlignItems.Center">
                                    <MudAvatar Size="Size.Small" Style="background-color: #FCC861; color: white">G</MudAvatar>
                                    <MudText>Gold: </MudText>
                                    <MudChip Size="Size.Small" T="string">Sport</MudChip>
                                </MudStack>
                            </MudStack>
                            <MudStack Row>
                                <MudStack Row Spacing="1" AlignItems="AlignItems.Center">
                                    <MudAvatar Size="Size.Small" Style="background-color: #E5E5E5; color: white">S</MudAvatar>
                                    <MudText>Silver: </MudText>
                                    <MudChip Size="Size.Small" T="string">Basketball</MudChip>
                                </MudStack>
                            </MudStack>
                            <MudStack Row>
                                <MudStack Row Spacing="1" AlignItems="AlignItems.Center">
                                    <MudAvatar Size="Size.Small" Style="background-color: #DCB386; color: white">B</MudAvatar>
                                    <MudText>Bronze: </MudText>
                                    <MudChip Size="Size.Small" T="string">Basketball</MudChip>
                                </MudStack>
                            </MudStack>
                        </MudStack>
                    </MudStack>
                </ChildContent>
            </MudExpansionPanel>
        </MudVirtualize>
        <MudText Align="Align.End" Typo="Typo.body2">Last Update: September 6, 2026, 8:53:51 AM</MudText>
    </MudStack>
</MudStack>

