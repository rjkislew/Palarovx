<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid>
        <MudItem xs="12">
            <MudStack Row Spacing="10" Wrap="Wrap.Wrap" Class="pa-5" Justify="Justify.Center">
                <MudVirtualize Items="brand" Context="brandData">
                    <MudImage Height="50" ObjectFit="ObjectFit.Cover" Src="@($"Media/Sponsors/{brandData.Brand}.png")"></MudImage>
                </MudVirtualize>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {

    private List<BrandData> brand = new()
    {
        new BrandData("Panasonic"),
        new BrandData("Dell"),
        new BrandData("Canon"),
        new BrandData("Samsung"),
        new BrandData("Nestle"),
        new BrandData("Nescafe"),
        new BrandData("Gatorade"),
        new BrandData("CocaCola"),
    };

    private class BrandData
    {
        public string Brand { get; set; }

        public BrandData(string brand)
        {
            Brand = brand;
        }
    }
}