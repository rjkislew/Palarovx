@page "/events"

<MudGrid>
    <MudItem xs="12">
        <MudStack Spacing="1">
            <MudText Typo="Typo.h2" Class="mb-n3" Color="Color.Secondary">Admin Control</MudText>
            <MudText Typo="Typo.h3" Color="Color.Tertiary">Events Management</MudText>
        </MudStack>
    </MudItem>
    <MudItem xs="4">
        <MudPaper Class="pa-3 mud-border-tertiary" Outlined>
            <MudField Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Clear" Label="Match ID" Margin="Margin.Dense" Variant="Variant.Outlined"></MudField>
            <MudAutocomplete Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Category" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Clearable Label="Category"></MudAutocomplete>
            <MudAutocomplete Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Sports" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Clearable Label="Sport"></MudAutocomplete>
            <MudAutocomplete Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.PeopleAlt" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Clearable Label="Gender"></MudAutocomplete>
            <MudAutocomplete Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Sports" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Clearable Label="Sport Sub Category"></MudAutocomplete>
            <MudAutocomplete Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.HomeWork" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Clearable Label="Venue"></MudAutocomplete>
            <MudField Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Title" Margin="Margin.Dense" Label="Event Title" Variant="Variant.Outlined"></MudField>
            <MudStack Row>
                <MudDatePicker Adornment="Adornment.Start" AdornmentColor="Color.Primary" Margin="Margin.Dense" Label="Date" Variant="Variant.Outlined"></MudDatePicker>
                <MudTimePicker Adornment="Adornment.Start" AdornmentColor="Color.Primary" Margin="Margin.Dense" Label="Time" Variant="Variant.Outlined" AmPm></MudTimePicker>
            </MudStack>
            <MudStack Row AlignItems="AlignItems.Center">
                <MudCheckBox T="bool" Label="On Stream" Size="Size.Small"></MudCheckBox>
                <MudTextField Adornment="Adornment.Start" AdornmentColor="Color.Primary" Margin="Margin.Dense" AdornmentIcon="@Icons.Material.Filled.FiberManualRecord" T="string" Label="Stream URL" Variant="Variant.Outlined"></MudTextField>
            </MudStack>
            <MudStack Row Justify="Justify.FlexEnd">
                <MudCheckBox T="bool" LabelPosition="LabelPosition.Start" Label="Finished"></MudCheckBox>
            </MudStack>
        </MudPaper>
    </MudItem>
</MudGrid>


