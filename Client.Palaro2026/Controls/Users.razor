@page "/users"

<MudGrid>
    <MudItem xs="12">
        <MudStack Spacing="1">
            <MudText Typo="Typo.h2" Class="mb-n3" Color="Color.Secondary">Admin Control</MudText>
            <MudText Typo="Typo.h3" Color="Color.Tertiary">User Management</MudText>
        </MudStack>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Class="pa-3 mud-border-tertiary" Outlined>
            <MudStack Spacing="0">
                <MudTextField T="string" Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Person" Label="Username" Margin="Margin.Dense" Variant="Variant.Outlined"></MudTextField>
                <MudTextField T="string" Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.Email" Label="Email" Margin="Margin.Dense" Variant="Variant.Outlined"></MudTextField>
                <MudAutocomplete Adornment="Adornment.Start" AdornmentColor="Color.Primary" AdornmentIcon="@Icons.Material.Filled.PeopleAlt" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Clearable Label="Role"></MudAutocomplete>
                <MudStack Row Justify="Justify.FlexEnd" Class="mt-10">
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary">
                        <MudText Typo="Typo.body2" Color="Color.Tertiary">Add User</MudText>
                    </MudButton>
                </MudStack>
            </MudStack>
        </MudPaper>
    </MudItem>
    <MudItem xs="9">
        <MudPaper Class="pa-3 mud-border-tertiary" Outlined>

            <MudSwitch @bind-Value="_hidePosition" Color="Color.Primary">Hide <b>position</b> when Breakpoint=Xs</MudSwitch>
            <MudSwitch @bind-Value="_loading" Color="Color.Primary">Show Loading</MudSwitch>
        </MudPaper>
    </MudItem>
</MudGrid>
@code {

    private bool _hidePosition;
    private bool _loading;
}
