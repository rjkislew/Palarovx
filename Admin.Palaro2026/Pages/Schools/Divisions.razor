@page "/divisions"

@using System.Net.Http
@using System.Text.Json
@using System.Threading.Tasks
@using System.Text
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject APIService apiService
@inject HttpClient httpClient

<MudGrid Spacing="0">
    @if (_schoolDivisions != null && _schoolDivisions.Any())
    {
        <MudItem xs="12">
            <MudStack Row Spacing="0" Justify="Justify.FlexEnd">
                <MudButton Size="Size.Large" Style="text-transform: none" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenAddSchoolDivisionDialog">Add Division</MudButton>
                <MudDivider Vertical="true" FlexItem="true" />
                <MudButton Size="Size.Large" Style="text-transform: none" StartIcon="@Icons.Material.Filled.Refresh" OnClick="GetSchoolDivisionsDetailsAsync">Refresh Table</MudButton>
            </MudStack>
        </MudItem>
        <MudItem xs="12">
            <MudTable Outlined Items="_schoolDivisions" Context="schoolDivision" FixedHeader Height="calc(100vh - 300px)" Virtualize="true" Filter="FilterFunc" Elevation="0">
                <ToolBarContent>
                    <MudText Typo="Typo.h6">Divisions</MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchString" Immediate Placeholder="Search"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Search"
                                  IconSize="Size.Medium" />
                </ToolBarContent>
                <ColGroup>
                    <MudHidden Breakpoint="Breakpoint.Xs">
                        <col style="width: 50%" />
                        <col style="width: 45%" />
                        <col style="width: 5%;" />
                    </MudHidden>
                </ColGroup>
                <HeaderContent>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<SchoolDTO.SchoolDivisionsDetails, object?>(x => x.Division)">
                            Division
                        </MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<SchoolDTO.SchoolDivisionsDetails, object?>(x => (x.Region, x.Abbreviation))">
                            Region
                        </MudTableSortLabel>
                    </MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Division">@schoolDivision.Division</MudTd>
                    <MudTd DataLabel="Region">@schoolDivision.Region (@schoolDivision.Abbreviation)</MudTd>
                    <MudTd Style="text-align: center">
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Class="pa-1" OnClick="() => OpenEditSchoolDivisionDialog(schoolDivision.ID)" />
                    </MudTd>
                </RowTemplate>
                <NoRecordsContent>
                    <MudText Typo="Typo.caption">No matching records found.</MudText>
                </NoRecordsContent>
                <PagerContent>
                    <MudTablePager/>
                </PagerContent>
            </MudTable>
        </MudItem>
    }
    else
    {
        <MudItem xs="12">
            <MudProgressLinear Indeterminate="true" />
        </MudItem>
    }
</MudGrid>

@code {
    // Requirement for Dialog to work
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }


    // JSON storage
    private List<SchoolDTO.SchoolDivisionsDetails>? _schoolDivisions;


    // DTOs
    public class SchoolDTO
    {
        public class SchoolDivisionsDetails
        {
            public int ID { get; set; }
            public string? Division { get; set; }
            public int? SchoolRegionID { get; set; }
            public string? Region { get; set; }
            public string? Abbreviation { get; set; }
        }
    }


    // Methods
    private string _searchString = "";

    private bool FilterFunc(SchoolDTO.SchoolDivisionsDetails schoolDivisions)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;
        return schoolDivisions.Division!.Contains(_searchString, StringComparison.OrdinalIgnoreCase) || 
               schoolDivisions.Region!.Contains(_searchString, StringComparison.OrdinalIgnoreCase) || 
               schoolDivisions.Abbreviation!.Contains(_searchString, StringComparison.OrdinalIgnoreCase);
    }


    // Dialogs
    private async Task OpenEditSchoolDivisionDialog(int selectedID)
    {
        var parameter = new DialogParameters<EditDivisionDialog>
        {
            {x => x.selectedSchoolDivisionID, selectedID}
        };
        var options = new DialogOptions {CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true, CloseOnEscapeKey = true };

        var dialog = await DialogService.ShowAsync<EditDivisionDialog>("Edit Divsion", parameter, options);

        var result = await dialog.Result;

        // Check if the dialog was closed with a positive result (e.g., "OK")
        if (!result!.Canceled)
        {
            await GetSchoolDivisionsDetailsAsync();
        }
    }    

    private async Task OpenAddSchoolDivisionDialog()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true, CloseOnEscapeKey = true };

        var dialog = await DialogService.ShowAsync<AddDivisionDialog>("Add Division", options);

        var result = await dialog.Result;

        if (!result!.Canceled)
        {
            await GetSchoolDivisionsDetailsAsync();
        }
    }


    // Initialization
    protected override async Task OnInitializedAsync()
    {
        await GetSchoolDivisionsDetailsAsync();
    }

    private async Task GetSchoolDivisionsDetailsAsync()
    {
        string url = "/Schools/Divisions/Details";

        _schoolDivisions = await apiService.GetAsync<SchoolDTO.SchoolDivisionsDetails>(url);
    }
}
