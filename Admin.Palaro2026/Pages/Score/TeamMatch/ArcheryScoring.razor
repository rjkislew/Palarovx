                                            </MudGrid>
                                            <MudDivider Class="my-2" />
                                        </MudPaper>
                                    </MudItem>
                                }
                            </MudGrid>
                        </MudPaper>
                    </MudItem>
                </MudGrid>
            }
        </ChildContent>

        <ItemRenderer Context="item">
            @{
                var hasDataInCurrentRound = HasDataInCurrentRound(item);
