    private List<RegionRoundScore> GetAllRegionScoresForRound()
    {
        var regionScores = new List<RegionRoundScore>();

        if (Regions == null || SelectedEvent == null)
            return regionScores;

        var allRegions = new List<RegionItem>();
        foreach (var round in AllRounds)
        {
            allRegions.AddRange(round);
        }

        var uniqueRegions = allRegions.GroupBy(r => r.Id)
                                      .Select(g => g.First())
                                      .ToList();

        foreach (var region in uniqueRegions)
        {
            var regionShots = Shots
                .Where(s => s.EventID == SelectedEvent.ID &&
                           s.RegionID == region.Id)
                .ToList();

            var totalScore = regionShots.Sum(s => s.ShotScore);
            var shotCount = regionShots.Count;

            var latestRound = allRegions
                .Where(r => r.Id == region.Id)
                .OrderByDescending(r => r.RoundNumber)
                .FirstOrDefault();

            var isUnassigned = latestRound?.AssignedLane == "Unassigned";
            int? actualLane = null;

            if (regionShots.Any())
            {
                actualLane = regionShots.First().Lane;
                isUnassigned = false;
            }
            else
            {
                actualLane = isUnassigned ? null : ParseAssignedLane(latestRound?.AssignedLane ?? "");
            }

            regionScores.Add(new RegionRoundScore
                {
                    RegionId = region.Id,
                    RegionName = region.Name,
                    TotalScore = totalScore,  
                    ShotCount = shotCount,
                    IsUnassigned = isUnassigned,
                    AssignedLane = latestRound?.AssignedLane ?? "Unassigned",
                    Lane = actualLane
                });
        }

        return regionScores;
    }

    private int? ParseAssignedLane(string assignedLane)
    {
        if (assignedLane == "Unassigned") return null;

        try
        {
            var parts = assignedLane.Split('_');
            if (parts.Length >= 2 && int.TryParse(parts[1], out int lane))
            {
                return lane;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error parsing assigned lane: {ex.Message}");
        }
        return null;
    }

