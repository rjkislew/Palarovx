                schoolLevelID = _schoolLevels?.FirstOrDefault(x => x.Level == parts[0])?.ID;
                genderID = _sportGenderCategories?.FirstOrDefault(x => x.Gender == parts[1])?.ID;

                if (schoolLevelID != null)
                    query = query.Where(e => e.LevelID == schoolLevelID);

