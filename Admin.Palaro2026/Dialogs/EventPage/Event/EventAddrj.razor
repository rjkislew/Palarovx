                var uploadUrl = $"/Events/UploadAttachment/{SelectedEventID}";
                var uploadSuccess = await apiService.PutFormAsync(uploadUrl, content);

                if (!uploadSuccess)
                {
                    Snackbar.Add("Event updated, but attachment upload failed.", Severity.Warning);
                    return;
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Event updated, but attachment upload failed: {ex.Message}", Severity.Warning);
                return;
            }
        }

