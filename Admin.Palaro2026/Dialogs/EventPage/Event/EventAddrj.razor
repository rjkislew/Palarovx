            }
        }

        if (_uploadedFileBytes != null && _uploadedFileBytes.Length > 0 && !string.IsNullOrEmpty(_uploadedFileContentType))
        {
            try
            {
                using var content = new MultipartFormDataContent();
                using var fileContent = new StreamContent(new MemoryStream(_uploadedFileBytes));

                fileContent.Headers.ContentType = new MediaTypeHeaderValue(_uploadedFileContentType);
                fileContent.Headers.ContentLength = _uploadedFileBytes.Length; // 👈 Important for ASP.NET to detect file size

                var fileExtension = Path.GetExtension(_updateEventAttachmentValue)?.ToLower() ?? ".dat";

                // 👇 Make sure the field name matches [FromForm] IFormFile attachmentFile
